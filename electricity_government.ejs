        <!-- Main Content -->
        <main class="content">
            <!-- Welcome Section -->
            <div class="mb-4 animate-fade" style="animation-delay: 0.1s;">
                <h3 class="fw-bold mb-2">Welcome back, Administrator</h3>
                <p class="text-muted">Monitor and manage electricity complaints from citizens efficiently.</p>
            </div>

            <!-- Statistics Cards -->
            <div class="row g-4 mb-4">
                <div class="col-md-3 col-6 animate-fade" style="animation-delay: 0.2s;">
                    <div class="dashboard-card total">
                        <div class="card-icon">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <div class="stat-number">154</div>
                        <div class="stat-label">Total Complaints</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 animate-fade" style="animation-delay: 0.3s;">
                    <div class="dashboard-card progress">
                        <div class="card-icon">
                            <i class="fas fa-spinner"></i>
                        </div>
                        <div class="stat-number">42</div>
                        <div class="stat-label">In Progress</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 animate-fade" style="animation-delay: 0.4s;">
                    <div class="dashboard-card resolved">
                        <div class="card-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="stat-number">87</div>
                        <div class="stat-label">Resolved</div>
                    </div>
                </div>
                <div class="col-md-3 col-6 animate-fade" style="animation-delay: 0.5s;">
                    <div class="dashboard-card pending">
                        <div class="card-icon">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="stat-number">25</div>
                        <div class="stat-label">Pending</div>
                    </div>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="filter-section animate-fade" style="animation-delay: 0.6s;">
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Status</label>
                        <select class="form-select" id="statusFilter">
                            <option value="all">All Status</option>
                            <option value="pending">Pending</option>
                            <option value="progress">In Progress</option>
                            <option value="resolved">Resolved</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Issue Type</label>
                        <select class="form-select" id="issueFilter">
                            <option value="all">All Issues</option>
                            <option value="power">Power Cut</option>
                            <option value="voltage">Voltage Fluctuations</option>
                            <option value="meter">Meter Issue</option>
                            <option value="sparking">Sparking</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-semibold">Time Period</label>
                        <select class="form-select" id="timeFilter">
                            <option value="all">All Time</option>
                            <option value="today">Today</option>
                            <option value="week">Last 7 Days</option>
                            <option value="month">This Month</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-primary w-100" id="applyFilters">
                            <i class="fas fa-filter me-2"></i>Apply Filters
                        </button>
                    </div>
                </div>
            </div>

            <!-- Complaints Table -->
            <div class="table-container animate-fade" style="animation-delay: 0.7s;">
                <div class="table-header">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-list-ul me-2"></i>Recent Complaints</h5>
                </div>
                
                <div class="table-responsive">
                    <table class="table" id="complaintsTable">
                        <thead>
                            <tr>
                                <th>Complaint ID</th>
                                <th>Consumer Details</th>
                                <th>Issue Type</th>
                                <th>Location</th>
                                <th>Date & Time</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="tableBody">
                            <!-- Complaints will be loaded here -->
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pagination -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <div class="text-muted" id="resultCount">
                    Showing <span id="showingCount">0</span> of <span id="totalCount">0</span> complaints
                </div>
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item disabled"><a class="page-link" href="#" id="prevPage">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#" data-page="1">1</a></li>
                        <li class="page-item"><a class="page-link" href="#" data-page="2">2</a></li>
                        <li class="page-item"><a class="page-link" href="#" data-page="3">3</a></li>
                        <li class="page-item"><a class="page-link" href="#" id="nextPage">Next</a></li>
                    </ul>
                </nav>
            </div>
        </main>
    </div>

    <script>
        // Sample complaints data
        const complaintsData = [
