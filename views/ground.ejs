            playgroundsGrid.innerHTML = '';
            
            // Filter by distance
            const filteredPlaygrounds = playgrounds.filter(playground => playground.distance <= searchRadius);
            
            // Filter by facility type if not 'all'
            let typeFiltered = filteredPlaygrounds;
            if (selectedFacilityType !== 'all') {
                typeFiltered = filteredPlaygrounds.filter(playground => playground.type === selectedFacilityType);
            }
            
            // Filter by features
            const selectedFeatures = getSelectedFeatures();
            let featureFiltered = typeFiltered;
            
            if (selectedFeatures.length > 0) {
                featureFiltered = typeFiltered.filter(playground => {
                    return selectedFeatures.every(feature => playground.features.includes(feature));
                });
            }
            
            // Filter by age groups
            const selectedAgeGroups = getSelectedAgeGroups();
            let ageFiltered = featureFiltered;
            
            if (selectedAgeGroups.length > 0) {
                ageFiltered = featureFiltered.filter(playground => {
                    return selectedAgeGroups.some(ageGroup => playground.ageGroups.includes(ageGroup));
                });
            }
            
            if (ageFiltered.length === 0) {
                noResults.style.display = 'block';
                document.getElementById('resultsCount').textContent = '0 playgrounds found';
                return;
