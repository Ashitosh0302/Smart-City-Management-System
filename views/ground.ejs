            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s;
            background: white;
            position: relative;
        }
        
        .playground-card:hover {
            border-color: #28a745;
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.1);
        }
        
        .playground-image {
            height: 200px;
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            position: relative;
            overflow: hidden;
        }
        
        .playground-image::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, rgba(0,0,0,0.2), transparent);
        }
        
        .playground-type {
