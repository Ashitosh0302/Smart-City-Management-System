        // Save Update Function - FIXED VERSION
        async function saveUpdate() {
            try {
                const newStatus = document.getElementById("statusSelect").value;
                const assignedTo = document.getElementById("assignedTo").value;
                const priority = document.getElementById("prioritySelect").value;
                const govtNotes = document.getElementById("govtNotes").value;
                const estimatedResolution = document.getElementById("estimatedResolution").value;

                console.log("ðŸ“¤ Sending road complaint update to backend:", {
                    status: newStatus,
                    assignedTo,
                    priority,
                    govtNotes,
                    estimatedResolution,
                    complaintId: currentComplaintId
                });

                // Show loading state on button
                const saveBtn = document.querySelector('#updateModal .btn-save');
                const originalText = saveBtn.innerHTML;
                saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';
                saveBtn.disabled = true;

                // Call the backend API to update the complaint
                const response = await fetch(`/government/complaints/road/${currentComplaintId}`, {
                    method: "PUT",
                    credentials: 'include',
                    headers: {
                        "Content-Type": "application/json",
                        "Accept": "application/json"
                    },
                    body: JSON.stringify({
                        status: newStatus,
                        assignedTo: assignedTo,
                        priority: priority,
                        govtNotes: govtNotes,
                        estimatedResolution: estimatedResolution
                    })
                });

                // Reset button state
                saveBtn.innerHTML = originalText;
                saveBtn.disabled = false;

                if (!response.ok) {
                    const errorData = await response.json().catch(() => null);
                    throw new Error(errorData?.message || `Server responded with status ${response.status}`);
                }

                const data = await response.json();
                console.log("ðŸ“¥ Backend response:", data);

                if (!data.success) {
                    throw new Error(data.message || "Update failed");
                }

                // âœ… Update local cache so UI refreshes instantly
                const index = allComplaints.findIndex(c => c._id === currentComplaintId);
                if (index !== -1) {
                    allComplaints[index].status = newStatus;
                    allComplaints[index].govtNotes = govtNotes;
                    allComplaints[index].updatedAt = new Date().toISOString();
                    
                    // Update other fields if they exist in the response
                    if (data.complaint) {
                        allComplaints[index] = { ...allComplaints[index], ...data.complaint };
                    }
                }

                showToast("Road complaint updated successfully!", "success");

                closeModal();
                filteredComplaints = [...allComplaints];
                updateDashboardStats(allComplaints);
                renderComplaintsTable();

            } catch (error) {
                console.error("âŒ Update failed:", error);
                showToast(error.message || "Failed to update complaint", "error");
                
                // Reset button state if error occurred
                const saveBtn = document.querySelector('#updateModal .btn-save');
                if (saveBtn) {
                    saveBtn.innerHTML = 'Save Changes';
                    saveBtn.disabled = false;
                }
            }
        }

        // Close Modal Function
        function closeModal() {
            document.getElementById('viewModal').classList.remove('active');
            document.getElementById('updateModal').classList.remove('active');
            currentComplaintId = '';
        }

        // Show Toast Notification
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const toastTitle = document.getElementById('toastTitle');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = toast.querySelector('i');

            // Set icon and title based on type
            if (type === 'error') {
                toast.style.borderLeftColor = 'var(--danger-color)';
                toastIcon.className = 'fas fa-exclamation-circle';
                toastIcon.style.color = 'var(--danger-color)';
                toastTitle.textContent = 'Error!';
            } else if (type === 'warning') {
                toast.style.borderLeftColor = 'var(--warning-color)';
                toastIcon.className = 'fas fa-exclamation-triangle';
                toastIcon.style.color = 'var(--warning-color)';
                toastTitle.textContent = 'Warning!';
            } else {
                toast.style.borderLeftColor = 'var(--success-color)';
                toastIcon.className = 'fas fa-check-circle';
                toastIcon.style.color = 'var(--success-color)';
                toastTitle.textContent = 'Success!';
            }

            toastMessage.textContent = message;
            toast.classList.add('show');

            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Close modal when clicking outside
        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('modal-overlay')) {
                closeModal();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
    </script>
