    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set minimum date to today
            const today = new Date().toISOString().split('T')[0];
            const dateInput = document.querySelector('input[name="preferredDate"]');
            if (dateInput) {
                dateInput.min = today;
                // Set default to next working day
                const tomorrow = new Date();
                tomorrow.setDate(tomorrow.getDate() + 1);
                const tomorrowFormatted = tomorrow.toISOString().split('T')[0];
                dateInput.value = tomorrowFormatted;
            }

            // Handle ID number field activation
            const idTypeRadios = document.querySelectorAll('input[name="idType"]');
            const idNumberInputs = {
                aadhaar: document.getElementById('aadhaarNumber'),
                pan: document.getElementById('panNumber'),
                passport: document.getElementById('passportNumber'),
                other: document.getElementById('otherIdNumber')
            };

            function activateIdField() {
                // Disable all ID number inputs first
                Object.values(idNumberInputs).forEach(input => {
                    if (input) {
                        input.disabled = true;
                        input.required = false;
                        input.style.opacity = '0.5';
                    }
                });

                // Activate selected one
                const selected = document.querySelector('input[name="idType"]:checked');
                if (selected && idNumberInputs[selected.value]) {
                    idNumberInputs[selected.value].disabled = false;
                    idNumberInputs[selected.value].required = true;
                    idNumberInputs[selected.value].style.opacity = '1';
                    idNumberInputs[selected.value].focus();
                }
            }

            idTypeRadios.forEach(radio => {
                radio.addEventListener('change', activateIdField);
                // Add subtle animation on selection
                radio.addEventListener('change', function() {
                    if (this.checked) {
                        const label = this.nextElementSibling;
                        label.style.transform = 'scale(1.1)';
                        setTimeout(() => {
                            label.style.transform = 'scale(1)';
                        }, 200);
                    }
                });
            });

            // Set default ID type
            const defaultId = document.getElementById('aadhaar');
            if (defaultId) {
                defaultId.checked = true;
                activateIdField();
            }

            // Form validation
            const form = document.getElementById('appointmentForm');
            form.addEventListener('submit', function(e) {
                // Check declaration
                const declaration = document.getElementById('declaration');
                if (!declaration.checked) {
                    e.preventDefault();
                    alert('Please accept the declaration before submitting.');
                    declaration.focus();
                    declaration.parentElement.style.animation = 'shake 0.5s';
                    setTimeout(() => {
                        declaration.parentElement.style.animation = '';
                    }, 500);
                    return false;
                }

                // Validate at least one case type is selected
                const caseTypes = document.querySelectorAll('input[name="caseType"]:checked');
                if (caseTypes.length === 0) {
                    e.preventDefault();
                    alert('Please select at least one Nature of Case/Matter.');
                    return false;
                }

                // Validate at least one purpose is selected
                const purposes = document.querySelectorAll('input[name="purpose"]:checked');
                if (purposes.length === 0) {
                    e.preventDefault();
                    alert('Please select at least one Purpose of Appointment.');
                    return false;
                }

                // Show submission animation
                const submitBtn = document.querySelector('.submit-button');
                submitBtn.innerHTML = 'Processing...';
                submitBtn.disabled = true;
                
                // Simulate processing
                setTimeout(() => {
                    submitBtn.innerHTML = '✓ Appointment Submitted';
                    submitBtn.style.background = 'linear-gradient(135deg, #27ae60 0%, #219653 100%)';
                    
                    // In real implementation, remove this timeout and handle actual form submission
                    setTimeout(() => {
                        alert('Appointment request submitted successfully! You will receive a confirmation SMS and email.');
                        // form.submit(); // Uncomment for actual submission
                    }, 1000);
                }, 1500);
                
                e.preventDefault(); // Remove this line for actual form submission
            });

            // Add shake animation for CSS
            const style = document.createElement('style');
            style.textContent = `
                @keyframes shake {
                    0%, 100% { transform: translateX(0); }
                    10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
                    20%, 40%, 60%, 80% { transform: translateX(5px); }
                }
            `;
            document.head.appendChild(style);

            // Add form field animations on focus
            const inputs = document.querySelectorAll('.form-input');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('scale-in');
                });
                
                // Auto-format case number
                if (input.id === 'caseNumber') {
                    input.addEventListener('blur', function() {
                        const value = this.value.trim().toUpperCase();
                        if (value && !value.includes('/')) {
                            const currentYear = new Date().getFullYear();
                            // Suggest format
                            this.value = value.replace(/(\w+)\s*(\d+)/, '$1/$2/' + currentYear);
                        }
                    });
                }
            });

            // Animate time slot selection
            const timeSlots = document.querySelectorAll('.time-slot-option input[type="radio"]');
            timeSlots.forEach(slot => {
                slot.addEventListener('change', function() {
                    if (this.checked) {
                        const label = this.nextElementSibling;
                        label.style.animation = 'scaleIn 0.3s ease-out';
                        setTimeout(() => {
                            label.style.animation = '';
                        }, 300);
                    }
                });
            });

            // Initialize animations for form sections
            const sections = document.querySelectorAll('.form-section');
            sections.forEach((section, index) => {
                section.style.setProperty('--section-index', index + 1);
                
                // Add staggered animation for form groups within each section
                const groups = section.querySelectorAll('.form-group');
                groups.forEach((group, groupIndex) => {
                    group.style.setProperty('--group-index', groupIndex + 1);
                });
            });
        });
    </script>
