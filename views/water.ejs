        // Get GPS Location
       
 function getGPSLocation() {
            const status = document.getElementById('locationStatus');
            const latitude = document.getElementById('latitude');
            const longitude = document.getElementById('longitude');
            const button = event.target.closest('.location-btn');
            
            if (navigator.geolocation) {
                status.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Getting location...';
                button.disabled = true;
                
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        const lat = position.coords.latitude;
                        const lng = position.coords.longitude;
                        
                        latitude.value = lat.toFixed(6);
                        longitude.value = lng.toFixed(6);
                          fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}`)
                            .then(response => response.json())
                            .then(data => {
                                if (data.display_name) {
                                    status.textContent = data.display_name;
                                } else {
                                    status.textContent = 'Location captured successfully';
                                }
                            })
                            .catch(() => {
                                status.textContent = 'Location captured successfully';
                            });
                             button.innerHTML = '<i class="fas fa-check me-2"></i>Location Captured';
                        button.style.background = '#4caf50';
                        button.style.borderColor = '#4caf50';
                        
                        // Reset button after 3 seconds
                        setTimeout(() => {
                            button.innerHTML = '<i class="fas fa-location-arrow"></i> Get Current Location';
                            button.disabled = false;
                            button.style.background = '';
                            button.style.borderColor = '';
                        }, 3000);
                    },
                     (error) => {
                        status.textContent = 'Unable to get location. Please enable GPS.';
                        button.disabled = false;
                    }
                );
            } else {
                status.textContent = 'Geolocation not supported by your browser';
            }
        }
        // Handle media upload
        let uploadedMedia = [];

        function handleMediaUpload(event) {
            const files = Array.from(event.target.files);
            const preview = document.getElementById('mediaPreview');
            
            // Check total files
            if (uploadedMedia.length + files.length > 5) {
                alert('Maximum 5 files allowed!');
                return;
            }
            
            // Process each file
            files.forEach(file => {
                if (file.size > 10 * 1024 * 1024) {
                    alert(`"${file.name}" is too large (max 10MB)`);
                    return;
                }
                
                if (!file.type.startsWith('image/') && !file.type.startsWith('video/')) {
                    alert(`"${file.name}" is not an image or video file`);
                    return;
                }
                
                uploadedMedia.push(file);
                displayMediaPreview(file);
            });
            
            event.target.value = '';
        }

        // Display media preview
        function displayMediaPreview(file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const preview = document.getElementById('mediaPreview');
                const mediaId = `media-${Date.now()}`;
                
                const mediaItem = document.createElement('div');
                mediaItem.className = 'media-item';
                mediaItem.id = mediaId;
                
                if (file.type.startsWith('image/')) {
                    mediaItem.innerHTML = `
                        <img src="${e.target.result}" alt="Photo">
                        <button class="remove-btn" onclick="removeMedia('${mediaId}')">×</button>
                    `;
                } else {
                    mediaItem.innerHTML = `
                        <video src="${e.target.result}" controls></video>
                        <button class="remove-btn" onclick="removeMedia('${mediaId}')">×</button>
                    `;
                }
                
                mediaItem.dataset.filename = file.name;
                preview.appendChild(mediaItem);
            };
            reader.readAsDataURL(file);
        }

        // Remove media
        function removeMedia(mediaId) {
            const mediaItem = document.getElementById(mediaId);
            const filename = mediaItem.dataset.filename;
            
            // Remove from array
            uploadedMedia = uploadedMedia.filter(media => media.name !== filename);
            
            // Remove from DOM
            mediaItem.remove();
        }

