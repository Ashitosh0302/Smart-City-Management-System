<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Water Supply Complaint | Smart City</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2196f3;
            --secondary: #1976d2;
            --light: #e3f2fd;
            --success: #4caf50;
            --warning: #ff9800;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0c2461, #1e3799, #4a69bd);
            min-height: 100vh;
            padding: 20px;
            overflow-x: hidden;
            position: relative;
        }

        /* Water Animation */
        .water-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            pointer-events: none;
        }

        .water-drop {
            position: absolute;
            background: rgba(33, 150, 243, 0.3);
            border-radius: 50% 50% 40% 40%;
            animation: dropFall 3s infinite ease-in;
        }

        .water-wave {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 100px;
            background: linear-gradient(transparent, rgba(33, 150, 243, 0.1));
            animation: wave 6s infinite linear;
        }

        @keyframes dropFall {
            0% {
                transform: translateY(-100px);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 0.8;
            }
            100% {
                transform: translateY(100vh);
                opacity: 0;
            }
        }

        @keyframes wave {
            0% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-20px);
            }
            100% {
                transform: translateY(0);
            }
        }

        /* Header */
        .header {
            text-align: center;
            margin-bottom: 30px;
            animation: slideDown 0.8s ease;
        }

        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .logo {
            font-size: 2.5rem;
            font-weight: 700;
            color: white;
            display: inline-flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 10px;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        .logo i {
            animation: waterBounce 2s infinite ease-in-out;
        }

        @keyframes waterBounce {
            0%, 100% { 
                transform: translateY(0); 
            }
            50% { 
                transform: translateY(-10px); 
            }
        }

        .subtitle {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.2rem;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Form Container */
        .form-container {
            max-width: 900px;
            margin: 0 auto;
            animation: fadeIn 1s ease;
        }

        .form-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        /* Location Options */
        .location-options {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }

        .option-btn {
            flex: 1;
            padding: 15px;
            border: 2px solid #ddd;
            border-radius: 10px;
            background: white;
            cursor: pointer;
            transition: all 0.3s;
            text-align: center;
            font-weight: 500;
        }

        .option-btn:hover {
            border-color: var(--primary);
            transform: translateY(-2px);
        }

        .option-btn.active {
            background: rgba(33, 150, 243, 0.1);
            border-color: var(--primary);
            color: var(--primary);
        }

        /* GPS Section */
        .location-section {
            display: none;
            animation: slideUp 0.5s ease;
        }

        .location-section.active {
            display: block;
        }

        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .gps-box {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin-top: 10px;
        }

        .location-btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .location-btn:hover {
            background: var(--secondary);
            transform: translateY(-2px);
        }

        .location-display {
            background: white;
            padding: 15px;
            border-radius: 8px;
            margin-top: 15px;
            border: 1px solid #dee2e6;
            min-height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .location-display.success {
            border-color: var(--success);
            background: rgba(76, 175, 80, 0.05);
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { box-shadow: 0 0 0 0 rgba(76, 175, 80, 0.2); }
            50% { box-shadow: 0 0 0 10px rgba(76, 175, 80, 0); }
        }

        /* Issue Cards */
        .issue-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }

        .issue-card {
            background: white;
            border: 2px solid #ddd;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

        .issue-card:hover {
            border-color: var(--primary);
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .issue-card.active {
            background: rgba(33, 150, 243, 0.1);
            border-color: var(--primary);
        }

        .issue-icon {
            font-size: 2rem;
            margin-bottom: 10px;
            color: var(--primary);
        }

        /* Upload Area */
        .upload-area {
            border: 2px dashed var(--primary);
            border-radius: 10px;
            padding: 40px 20px;
            text-align: center;
            cursor: pointer;
            background: #f8f9fa;
            margin-bottom: 20px;
            transition: all 0.3s;
        }

        .upload-area:hover {
            background: #e9ecef;
        }

        .upload-icon {
            font-size: 3rem;
            color: var(--primary);
            margin-bottom: 15px;
            animation: pulse 2s infinite;
        }

        /* Submit Button */
        .submit-btn {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border: none;
            padding: 15px 40px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1.1rem;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }

        /* Success Modal */
        .success-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        .success-modal.show {
            display: flex;
            animation: fadeIn 0.3s ease;
        }

        .success-card {
            background: white;
            border-radius: 15px;
            padding: 40px;
            text-align: center;
            max-width: 400px;
            width: 90%;
            animation: popIn 0.4s ease;
        }

        @keyframes popIn {
            0% { transform: scale(0.8); opacity: 0; }
            100% { transform: scale(1); opacity: 1; }
        }

        .success-icon {
            font-size: 4rem;
            color: var(--success);
            margin-bottom: 20px;
            animation: bounce 1s ease;
        }

        @keyframes bounce {
            0%, 100% { transform: scale(1); }
            30% { transform: scale(1.3); }
            60% { transform: scale(0.95); }
        }

        /* Media Preview */
        .media-preview {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 20px;
        }

        .media-item {
            width: 100px;
            height: 100px;
            border-radius: 8px;
            overflow: hidden;
            position: relative;
        }

        .media-item img, .media-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .remove-btn {
            position: absolute;
            top: 5px;
            right: 5px;
            background: #e74c3c;
            color: white;
            border: none;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            font-size: 12px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Section Styling */
        .form-section {
            margin-bottom: 30px;
            padding-bottom: 30px;
            border-bottom: 2px solid #eee;
        }

        .section-title {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-title i {
            color: var(--primary);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .issue-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .form-card {
                padding: 20px;
            }
            
            .location-options {
                flex-direction: column;
            }
        }

        @media (max-width: 576px) {
            .issue-grid {
                grid-template-columns: 1fr;
            }
            
            body {
                padding: 10px;
            }
            
            .logo {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <!-- Water Animation -->
    <div class="water-animation" id="waterAnimation"></div>

    <!-- Header -->
    <div class="header">
        <div class="logo">
            <i class="fas fa-water"></i>
            Water Supply Complaint
        </div>
        <p class="subtitle">Report water issues. Help us provide better service to your area.</p>
    </div>

    <!-- Main Form -->
    <div class="form-container">
        <div class="form-card">
            <form id="waterComplaintForm">
                <!-- Location Details -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-map-marker-alt"></i>
                        Location Details
                    </h3>

                    <!-- Basic Address -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">House/Flat No. *</label>
                            <input type="text" class="form-control" name="houseNo" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Street/Area *</label>
                            <input type="text" class="form-control" name="street" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Ward/Zone *</label>
                            <select class="form-select" name="ward" required>
                                <option value="">Select Ward/Zone</option>
                                <option>Ward 1</option>
                                <option>Ward 2</option>
                                <option>Ward 3</option>
                                <option>Ward 4</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">City *</label>
                            <input type="text" class="form-control" name="city" value="Smart City" required>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Pin Code *</label>
                            <input type="text" class="form-control" name="pincode" pattern="[0-9]{6}" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Landmark</label>
                            <input type="text" class="form-control" name="landmark">
                        </div>
                    </div>

                    <!-- Location Options -->
                    <label class="form-label">Location Method *</label>
                    <div class="location-options">
                        <div class="option-btn active" onclick="selectLocationMethod('address')">
                            <i class="fas fa-home"></i> Use Address Only
                        </div>
                        <div class="option-btn" onclick="selectLocationMethod('gps')">
                            <i class="fas fa-location-arrow"></i> Use GPS Location
                        </div>
                    </div>

                    <!-- GPS Section -->
                    <div id="gpsSection" class="location-section">
                        <div class="gps-box">
                            <div class="d-flex align-items-center gap-3 mb-3">
                                <button type="button" class="location-btn" id="gpsButton" onclick="getGPSLocation()">
                                    <i class="fas fa-location-arrow"></i>
                                    Get Current Location
                                </button>
                                <span id="locationStatus">Click to get location</span>
                            </div>
                            
                            <div id="locationDisplay" class="location-display">
                                <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                <span>Your location will appear here</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Complaint Details -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-exclamation-circle"></i>
                        Complaint Details
                    </h3>

                    <!-- Issue Type -->
                    <div class="mb-4">
                        <label class="form-label">Complaint Type *</label>
                        <div class="issue-grid">
                            <div class="issue-card active" onclick="selectIssue('no_water')">
                                <i class="fas fa-tint-slash issue-icon"></i>
                                <div>No Water Supply</div>
                            </div>
                            
                            <div class="issue-card" onclick="selectIssue('low_pressure')">
                                <i class="fas fa-tachometer-alt issue-icon"></i>
                                <div>Low Water Pressure</div>
                            </div>
                            
                            <div class="issue-card" onclick="selectIssue('dirty_water')">
                                <i class="fas fa-filter issue-icon"></i>
                                <div>Dirty Water</div>
                            </div>
                            
                            <div class="issue-card" onclick="selectIssue('leakage')">
                                <i class="fas fa-faucet-drip issue-icon"></i>
                                <div>Water Leakage</div>
                            </div>
                            
                            <div class="issue-card" onclick="selectIssue('pipe_burst')">
                                <i class="fas fa-wrench issue-icon"></i>
                                <div>Pipe Burst</div>
                            </div>
                            
                            <div class="issue-card" onclick="selectIssue('other')">
                                <i class="fas fa-ellipsis-h issue-icon"></i>
                                <div>Other Issue</div>
                            </div>
                        </div>
                        <input type="hidden" name="issueType" id="issueType" value="no_water">
                        
                        <div id="otherInput" class="mt-3" style="display: none;">
                            <input type="text" class="form-control" placeholder="Please describe the issue">
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label class="form-label">Description *</label>
                        <textarea class="form-control" name="description" rows="3" required></textarea>
                    </div>

                    <!-- Date & Time -->
                    <div class="row">
                        <div class="col-md-6">
                            <label class="form-label">Date of Issue *</label>
                            <input type="date" class="form-control" name="issueDate" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Time of Issue *</label>
                            <input type="time" class="form-control" name="issueTime" required>
                        </div>
                    </div>
                </div>

                <!-- Photo/Video Evidence -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-camera"></i>
                        Photo/Video Evidence
                    </h3>

                    <div class="mb-4">
                        <div class="upload-area" onclick="document.getElementById('mediaInput').click()">
                            <i class="fas fa-cloud-upload-alt upload-icon"></i>
                            <p>Click to upload files</p>
                            <small>Max 5 files, 10MB each</small>
                        </div>
                        <input type="file" id="mediaInput" multiple accept="image/*,video/*" 
                               class="d-none" onchange="handleMediaUpload(event)">
                        
                        <div id="mediaPreview" class="media-preview"></div>
                    </div>
                </div>

                <!-- Submit -->
                <div class="text-center">
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-paper-plane"></i>
                        Submit Complaint
                    </button>
                    <p class="text-muted mt-3">
                        <i class="fas fa-info-circle"></i>
                        We'll contact you within 24 hours
                    </p>
                </div>
            </form>
        </div>
    </div>

    <!-- Success Modal -->
    <div class="success-modal" id="successModal">
        <div class="success-card">
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h4>Complaint Submitted!</h4>
            <p>Your complaint ID: <strong id="complaintId">WTR-XXXXXX</strong></p>
            <p class="text-muted">Our team will contact you within 24 hours</p>
            <button class="btn btn-primary mt-3" onclick="resetForm()">
                <i class="fas fa-redo me-2"></i>Submit Another
            </button>
        </div>
    </div>

    <script>
        // Global variables
        let uploadedFiles = [];
        let locationMethod = 'address'; // 'address' or 'gps'
        let gpsLocation = null;

        // Create water animation
        function createWaterAnimation() {
            const container = document.getElementById('waterAnimation');
            
            // Add water wave
            const wave = document.createElement('div');
            wave.className = 'water-wave';
            container.appendChild(wave);
            
            // Add water drops
            for(let i = 0; i < 20; i++) {
                const drop = document.createElement('div');
                drop.className = 'water-drop';
                
                const size = Math.random() * 20 + 10;
                drop.style.width = `${size}px`;
                drop.style.height = `${size * 1.5}px`;
                drop.style.left = `${Math.random() * 100}%`;
                drop.style.animationDelay = `${Math.random() * 3}s`;
                drop.style.background = `rgba(33, 150, 243, ${Math.random() * 0.3 + 0.1})`;
                
                container.appendChild(drop);
            }
        }

        // Select location method
        function selectLocationMethod(method) {
            locationMethod = method;
            
            // Update button states
            document.querySelectorAll('.option-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
            
            // Show/hide GPS section
            const gpsSection = document.getElementById('gpsSection');
            if (method === 'gps') {
                gpsSection.classList.add('active');
            } else {
                gpsSection.classList.remove('active');
            }
        }

        // Get GPS Location - Simple and working
        function getGPSLocation() {
            const status = document.getElementById('locationStatus');
            const gpsButton = document.getElementById('gpsButton');
            const locationDisplay = document.getElementById('locationDisplay');
            
            // Check browser support
            if (!navigator.geolocation) {
                status.textContent = 'GPS not supported by browser';
                status.style.color = '#e74c3c';
                return;
            }
            
            // Show loading state
            status.textContent = 'Getting location...';
            gpsButton.disabled = true;
            gpsButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Getting Location...';
            
            locationDisplay.innerHTML = '<i class="fas fa-spinner fa-spin text-primary me-2"></i>Detecting location...';
            
            // Get location
            navigator.geolocation.getCurrentPosition(
                // Success
                function(position) {
                    const lat = position.coords.latitude;
                    const lng = position.coords.longitude;
                    
                    // Store location
                    gpsLocation = { lat, lng };
                    
                    // Update UI
                    status.textContent = 'Location captured!';
                    status.style.color = '#4caf50';
                    gpsButton.disabled = false;
                    gpsButton.innerHTML = '<i class="fas fa-location-arrow"></i> Get Current Location';
                    
                    // Try to get address
                    getAddressFromCoords(lat, lng);
                    
                    console.log('GPS Location:', gpsLocation);
                },
                // Error
                function(error) {
                    gpsButton.disabled = false;
                    gpsButton.innerHTML = '<i class="fas fa-location-arrow"></i> Get Current Location';
                    
                    let errorMessage = '';
                    switch(error.code) {
                        case error.PERMISSION_DENIED:
                            errorMessage = 'Permission denied. Please allow location access.';
                            break;
                        case error.POSITION_UNAVAILABLE:
                            errorMessage = 'Location unavailable. Check GPS/internet.';
                            break;
                        case error.TIMEOUT:
                            errorMessage = 'Request timeout. Please try again.';
                            break;
                        default:
                            errorMessage = 'Unable to get location.';
                    }
                    
                    status.textContent = errorMessage;
                    status.style.color = '#e74c3c';
                    
                    locationDisplay.innerHTML = `
                        <div class="text-center text-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <span>${errorMessage}</span>
                        </div>
                    `;
                    
                    alert('Please use address method instead.');
                },
                // Options
                {
                    enableHighAccuracy: true,
                    timeout: 10000,
                    maximumAge: 0
                }
            );
        }

        // Get address from coordinates
        async function getAddressFromCoords(lat, lng) {
            const locationDisplay = document.getElementById('locationDisplay');
            
            try {
                const response = await fetch(
                    `https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}`
                );
                
                if (response.ok) {
                    const data = await response.json();
                    if (data.display_name) {
                        let address = data.display_name;
                        if (address.length > 60) {
                            address = address.substring(0, 60) + '...';
                        }
                        
                        locationDisplay.innerHTML = `
                            <div class="text-start">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <div><strong>Location Found</strong></div>
                                <small>${address}</small>
                            </div>
                        `;
                        locationDisplay.classList.add('success');
                        return;
                    }
                }
            } catch (error) {
                // Continue with coordinates display
            }
            
            // Fallback to coordinates
            locationDisplay.innerHTML = `
                <div class="text-center">
                    <i class="fas fa-check-circle text-success me-2"></i>
                    <div><strong>Location Captured</strong></div>
                    <small>${lat.toFixed(6)}, ${lng.toFixed(6)}</small>
                </div>
            `;
            locationDisplay.classList.add('success');
        }

        // Select issue type
        function selectIssue(type) {
            document.getElementById('issueType').value = type;
            document.querySelectorAll('.issue-card').forEach(card => {
                card.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
            
            // Show/hide other input
            const otherInput = document.getElementById('otherInput');
            otherInput.style.display = type === 'other' ? 'block' : 'none';
        }

        // Handle media upload
        function handleMediaUpload(event) {
            const files = Array.from(event.target.files);
            const preview = document.getElementById('mediaPreview');
            
            if (uploadedFiles.length + files.length > 5) {
                alert('Maximum 5 files allowed');
                return;
            }
            
            files.forEach(file => {
                if (file.size > 10 * 1024 * 1024) {
                    alert(`"${file.name}" is too large (max 10MB)`);
                    return;
                }
                
                uploadedFiles.push(file);
                const reader = new FileReader();
                reader.onload = function(e) {
                    const mediaItem = document.createElement('div');
                    mediaItem.className = 'media-item';
                    
                    if (file.type.startsWith('image/')) {
                        mediaItem.innerHTML = `
                            <img src="${e.target.result}" alt="Evidence">
                            <button class="remove-btn" onclick="removeMedia(this)">×</button>
                        `;
                    } else {
                        mediaItem.innerHTML = `
                            <video src="${e.target.result}" controls></video>
                            <button class="remove-btn" onclick="removeMedia(this)">×</button>
                        `;
                    }
                    
                    mediaItem.dataset.name = file.name;
                    preview.appendChild(mediaItem);
                };
                reader.readAsDataURL(file);
            });
            
            event.target.value = '';
        }

        // Remove media
        function removeMedia(btn) {
            const mediaItem = btn.parentElement;
            const fileName = mediaItem.dataset.name;
            uploadedFiles = uploadedFiles.filter(f => f.name !== fileName);
            mediaItem.remove();
        }

        // Form submission
        document.getElementById('waterComplaintForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Validate location
            if (locationMethod === 'gps' && !gpsLocation) {
                alert('Please get your GPS location first!');
                return;
            }
            
            // Generate complaint ID
            const complaintId = 'WTR-' + Date.now().toString().slice(-8);
            document.getElementById('complaintId').textContent = complaintId;
            
            // Show success modal
            document.getElementById('successModal').classList.add('show');
            
            // Log data
            console.log('Complaint submitted:', {
                complaintId,
                locationMethod,
                gpsLocation,
                issueType: document.getElementById('issueType').value,
                filesCount: uploadedFiles.length
            });
        });

        // Reset form
        function resetForm() {
            document.getElementById('successModal').classList.remove('show');
            document.getElementById('waterComplaintForm').reset();
            
            // Reset location
            document.getElementById('locationStatus').textContent = 'Click to get location';
            document.getElementById('locationStatus').style.color = '';
            document.getElementById('locationDisplay').innerHTML = 
                '<i class="fas fa-map-marker-alt text-muted me-2"></i><span>Your location will appear here</span>';
            document.getElementById('locationDisplay').classList.remove('success');
            
            gpsLocation = null;
            
            // Reset selections
            selectIssue('no_water');
            selectLocationMethod('address');
            
            // Clear media
            uploadedFiles = [];
            document.getElementById('mediaPreview').innerHTML = '';
            
            // Set current date and time
            const today = new Date().toISOString().split('T')[0];
            const now = new Date();
            const time = now.getHours().toString().padStart(2, '0') + ':' + 
                         now.getMinutes().toString().padStart(2, '0');
            
            document.querySelector('input[name="issueDate"]').value = today;
            document.querySelector('input[name="issueTime"]').value = time;
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            createWaterAnimation();
            
            // Set current date and time
            const today = new Date().toISOString().split('T')[0];
            const now = new Date();
            const time = now.getHours().toString().padStart(2, '0') + ':' + 
                         now.getMinutes().toString().padStart(2, '0');
            
            document.querySelector('input[name="issueDate"]').value = today;
            document.querySelector('input[name="issueTime"]').value = time;
            
            // Initialize methods
            selectLocationMethod('address');
        });
    </script>
