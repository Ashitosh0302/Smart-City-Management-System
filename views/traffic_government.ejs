<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Government - Traffic Alerts Management</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
        }

        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --secondary: #7c3aed;
            --accent: #f59e0b;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --light: #f8fafc;
            --dark: #1e293b;
            --gray: #64748b;
            --border: #e2e8f0;
            --neutral: #94a3b8;
        }

        body {
            background: linear-gradient(135deg, #f0f9ff 0%, #f8fafc 100%);
            color: var(--dark);
            min-height: 100vh;
        }

        /* Header Styles */
        .header {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            padding: 1.5rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 20px rgba(37, 99, 235, 0.2);
            animation: slideDown 0.8s ease-out;
            position: relative;
            overflow: hidden;
        }

        .header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.1) 50%, transparent 70%);
            animation: shine 3s infinite;
        }

        @keyframes shine {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        .header h1 {
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 12px;
            animation: fadeIn 1s ease-out 0.2s backwards;
        }

        .logout-btn {
            background: rgba(255,255,255,0.15);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255,255,255,0.2);
            color: white;
            padding: 10px 24px;
            border-radius: 8px;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            animation: fadeIn 1s ease-out 0.4s backwards;
        }

        .logout-btn:hover {
            background: rgba(255,255,255,0.25);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255,255,255,0.2);
        }

        /* Container Layout */
        .container {
            display: flex;
            min-height: calc(100vh - 80px);
            animation: fadeIn 0.8s ease-out;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 260px;
            background: linear-gradient(180deg, white 0%, #f8fafc 100%);
            border-right: 1px solid var(--border);
            padding: 2rem 0;
            box-shadow: 2px 0 15px rgba(0,0,0,0.05);
            animation: slideInLeft 0.8s ease-out;
        }

        .nav-item {
            padding: 16px 28px;
            display: flex;
            align-items: center;
            gap: 14px;
            color: var(--gray);
            text-decoration: none;
            border-left: 4px solid transparent;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            margin: 4px 0;
            position: relative;
            overflow: hidden;
        }

        .nav-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 4px;
            height: 100%;
            background: var(--primary);
            transform: scaleY(0);
            transition: transform 0.3s ease;
        }

        .nav-item:hover {
            background: linear-gradient(90deg, rgba(37, 99, 235, 0.08) 0%, transparent 100%);
            color: var(--primary);
            padding-left: 32px;
            transform: translateX(5px);
        }

        .nav-item:hover::before {
            transform: scaleY(1);
        }

        .nav-item.active {
            background: linear-gradient(90deg, rgba(37, 99, 235, 0.1) 0%, transparent 100%);
            color: var(--primary);
            font-weight: 600;
            padding-left: 32px;
        }

        .nav-item.active::before {
            transform: scaleY(1);
        }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 2.5rem;
            animation: fadeInUp 0.8s ease-out 0.3s backwards;
        }

        .page-title {
            color: var(--dark);
            margin-bottom: 2.5rem;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 2rem;
            animation: fadeInUp 0.8s ease-out 0.4s backwards;
        }

        .page-title i {
            color: var(--primary);
            animation: pulse 2s infinite;
        }

        /* Form Card */
        .alert-form-card {
            background: white;
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 0 8px 30px rgba(37, 99, 235, 0.08);
            margin-bottom: 2.5rem;
            border: 1px solid rgba(37, 99, 235, 0.1);
            animation: cardAppear 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
            transition: transform 0.3s ease;
        }

        .alert-form-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(37, 99, 235, 0.12);
        }

        .form-group {
            margin-bottom: 2rem;
            animation: fadeIn 0.6s ease-out;
        }

        .form-group label {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: var(--dark);
            font-size: 0.95rem;
            letter-spacing: 0.5px;
        }

        .form-control {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid var(--border);
            border-radius: 10px;
            font-size: 15px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: white;
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
            transform: translateY(-2px);
        }

        /* FIXED: Severity Buttons - Neutral until selected */
        .severity-buttons {
            display: flex;
            gap: 12px;
            margin-top: 8px;
        }

        .severity-btn {
            flex: 1;
            padding: 14px;
            border: 2px solid var(--border);
            background: white;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            animation: fadeIn 0.6s ease-out;
            color: var(--gray);
        }

        /* Default state - All buttons look the same */
        .severity-btn i {
            color: var(--neutral);
            transition: color 0.3s ease;
        }

        .severity-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 15px rgba(0,0,0,0.1);
            border-color: var(--neutral);
            color: var(--dark);
        }

        .severity-btn:hover i {
            color: var(--dark);
        }

        /* Selected state - Each button shows its own color */
        .severity-btn.active {
            color: white;
            border: none;
            animation: buttonPop 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
        }

        .severity-btn.active i {
            color: white;
        }

        .severity-btn.low.active {
            background: linear-gradient(135deg, var(--success) 0%, #34d399 100%);
            box-shadow: 0 6px 15px rgba(16, 185, 129, 0.3);
        }

        .severity-btn.medium.active {
            background: linear-gradient(135deg, var(--warning) 0%, #fbbf24 100%);
            box-shadow: 0 6px 15px rgba(245, 158, 11, 0.3);
        }

        .severity-btn.high.active {
            background: linear-gradient(135deg, var(--danger) 0%, #f87171 100%);
            box-shadow: 0 6px 15px rgba(239, 68, 68, 0.3);
        }

        /* Submit Button */
        .submit-btn {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            border: none;
            padding: 16px 40px;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            width: 100%;
            margin-top: 1rem;
            animation: fadeIn 0.8s ease-out 0.6s backwards;
            position: relative;
            overflow: hidden;
        }

        .submit-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.7s ease;
        }

        .submit-btn:hover::before {
            left: 100%;
        }

        .submit-btn:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 25px rgba(37, 99, 235, 0.3);
        }

        .submit-btn:active {
            transform: translateY(-1px);
        }

        /* Recent Alerts */
        .recent-alerts {
            background: white;
            border-radius: 16px;
            padding: 2.5rem;
            box-shadow: 0 8px 30px rgba(37, 99, 235, 0.08);
            border: 1px solid rgba(37, 99, 235, 0.1);
            animation: cardAppear 0.8s cubic-bezier(0.34, 1.56, 0.64, 1) 0.2s backwards;
        }

        .section-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 2rem;
            color: var(--dark);
            font-size: 1.5rem;
        }

        .section-header i {
            color: var(--primary);
            animation: spinSlow 10s linear infinite;
        }

        /* Alert Items */
        #alertsList {
            display: grid;
            gap: 1.2rem;
        }

        .alert-item {
            background: white;
            padding: 1.5rem;
            border-radius: 12px;
            border: 1px solid var(--border);
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            animation: slideInRight 0.5s ease-out;
            position: relative;
            overflow: hidden;
        }

        .alert-item:hover {
            transform: translateX(5px);
            box-shadow: 0 6px 20px rgba(0,0,0,0.08);
            border-color: rgba(37, 99, 235, 0.2);
        }

        .alert-item::after {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 4px;
            height: 100%;
            background: var(--primary);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .alert-item:hover::after {
            opacity: 1;
        }

        .alert-info h4 {
            margin-bottom: 8px;
            color: var(--dark);
            font-size: 1.1rem;
        }

        .alert-meta {
            color: var(--gray);
            font-size: 0.9rem;
            line-height: 1.5;
        }

        /* Badges */
        .alert-badge {
            padding: 8px 20px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

        .alert-item:hover .alert-badge {
            transform: scale(1.05);
        }

        .badge-low {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(16, 185, 129, 0.05) 100%);
            color: var(--success);
            border: 1px solid rgba(16, 185, 129, 0.2);
        }

        .badge-medium {
            background: linear-gradient(135deg, rgba(245, 158, 11, 0.15) 0%, rgba(245, 158, 11, 0.05) 100%);
            color: var(--warning);
            border: 1px solid rgba(245, 158, 11, 0.2);
        }

        .badge-high {
            background: linear-gradient(135deg, rgba(239, 68, 68, 0.15) 0%, rgba(239, 68, 68, 0.05) 100%);
            color: var(--danger);
            border: 1px solid rgba(239, 68, 68, 0.2);
        }

        /* Delete Button */
        .delete-btn {
            background: none;
            border: 1px solid var(--danger);
            color: var(--danger);
            padding: 8px 18px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 0.85rem;
            font-weight: 500;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            display: flex;
            align-items: center;
            gap: 6px;
        }

        .delete-btn:hover {
            background: var(--danger);
            color: white;
            transform: scale(1.05);
            box-shadow: 0 4px 12px rgba(239, 68, 68, 0.3);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 3rem 2rem;
            color: var(--gray);
            animation: fadeIn 0.8s ease-out;
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: var(--border);
            animation: float 3s ease-in-out infinite;
        }

        /* Animations */
        @keyframes slideDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-30px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes cardAppear {
            0% {
                opacity: 0;
                transform: scale(0.9) translateY(20px);
            }
            100% {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        @keyframes buttonPop {
            0% {
                transform: scale(0.95);
            }
            50% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1);
            }
        }

        @keyframes pulse {
            0%, 100% {
                opacity: 1;
                transform: scale(1);
            }
            50% {
                opacity: 0.8;
                transform: scale(1.05);
            }
        }

        @keyframes spinSlow {
            from {
                transform: rotate(0deg);
            }
            to {
                transform: rotate(360deg);
            }
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .container {
                flex-direction: column;
            }
            
            .sidebar {
                width: 100%;
                padding: 1rem;
                border-right: none;
                border-bottom: 1px solid var(--border);
            }
            
            .nav-item {
                padding: 12px 20px;
            }
        }

        @media (max-width: 768px) {
            .main-content {
                padding: 1.5rem;
            }
            
            .severity-buttons {
                flex-direction: column;
            }
            
            .alert-form-card, .recent-alerts {
                padding: 1.5rem;
            }
            
            .page-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>
            <i class="fas fa-landmark"></i>
            Government Portal - Traffic Alerts
        </h1>
        <a href="#" class="logout-btn">
            <i class="fas fa-sign-out-alt"></i>
            Logout
        </a>
    </div>

    <div class="container">
        <div class="sidebar">
            <a href="#" class="nav-item">
                <i class="fas fa-tachometer-alt"></i>
                Dashboard
            </a>
            <a href="#" class="nav-item">
                <i class="fas fa-clipboard-list"></i>
                All Complaints
            </a>
            <a href="#" class="nav-item active">
                <i class="fas fa-traffic-light"></i>
                Traffic Alerts
            </a>
            <a href="#" class="nav-item">
                <i class="fas fa-users"></i>
                Citizen Management
            </a>
            <a href="#" class="nav-item">
                <i class="fas fa-cog"></i>
                Settings
            </a>
        </div>

        <div class="main-content">
            <h2 class="page-title">
                <i class="fas fa-bullhorn"></i>
                Send Traffic Alert to Citizens
            </h2>

            <div class="alert-form-card">
                <form id="alertForm">
                    <div class="form-group">
                        <label>Alert Type</label>
                        <select class="form-control" id="alertType" required>
                            <option value="">Select type</option>
                            <option value="üöß Road Construction">üöß Road Construction</option>
                            <option value="üö¶ Signal Not Working">üö¶ Signal Not Working</option>
                            <option value="üöó Heavy Traffic">üöó Heavy Traffic</option>
                            <option value="üöß Road Blocked">üöß Road Blocked</option>
                            <option value="üöë Accident Reported">üöë Accident Reported</option>
                            <option value="‚ö†Ô∏è Diversion">‚ö†Ô∏è Diversion</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Location</label>
                        <input type="text" class="form-control" id="location" 
                               placeholder="Enter exact location" required>
                    </div>

                    <div class="form-group">
                        <label>City</label>
                        <select class="form-control" id="city" required>
                            <option value="">Select city</option>
                            <option value="Pune">Pune</option>
                            <option value="Hyderabad">Hyderabad</option>
                            <option value="Bangalore">Bangalore</option>
                            <option value="Delhi">Delhi</option>
                            <option value="Mumbai">Mumbai</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Alert Severity</label>
                        <div class="severity-buttons">
                            <button type="button" class="severity-btn low" data-severity="low">
                                <i class="fas fa-check-circle"></i>
                                Low Priority
                            </button>
                            <button type="button" class="severity-btn medium" data-severity="medium">
                                <i class="fas fa-exclamation-triangle"></i>
                                Medium Priority
                            </button>
                            <button type="button" class="severity-btn high" data-severity="high">
                                <i class="fas fa-exclamation-circle"></i>
                                High Priority
                            </button>
                        </div>
                        <input type="hidden" id="severity" value="low" required>
                    </div>

                    <div class="form-group">
                        <label>Alert Details</label>
                        <textarea class="form-control" id="details" 
                                  rows="4" placeholder="Provide additional details..."></textarea>
                    </div>

                    <button type="submit" class="submit-btn">
                        <i class="fas fa-paper-plane"></i>
                        Send Alert to Citizens
                    </button>
                </form>
            </div>

            <div class="recent-alerts">
                <div class="section-header">
                    <i class="fas fa-history"></i>
                    <h3>Recent Alerts Sent</h3>
                </div>
                
                <div id="alertsList">
                    <!-- Alerts will be added here dynamically -->
                </div>
            </div>
        </div>
    </div>

    <script>
        // Initialize with sample data
        let alerts = [
            { 
                type: "üöß Road Construction", 
                location: "MG Road", 
                city: "Pune", 
                severity: "medium", 
                details: "Construction work in progress. Expect delays.", 
                time: "Just now" 
            },
            { 
                type: "üöó Heavy Traffic", 
                location: "Marine Drive", 
                city: "Mumbai", 
                severity: "high", 
                details: "Major congestion. Avoid this route for next 2 hours.", 
                time: "2 hours ago" 
            },
            { 
                type: "üö¶ Signal Not Working", 
                location: "Charminar", 
                city: "Hyderabad", 
                severity: "low", 
                details: "Traffic police deployed at junction. Drive carefully.", 
                time: "Yesterday, 3:45 PM" 
            }
        ];

        // Initialize severity button selection
        document.addEventListener('DOMContentLoaded', function() {
            // Set default low priority as active
            const lowBtn = document.querySelector('.severity-btn.low');
            lowBtn.classList.add('active');
            lowBtn.style.animation = 'buttonPop 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)';
            
            // Add click handlers
            document.querySelectorAll('.severity-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    // Remove active class from all buttons
                    document.querySelectorAll('.severity-btn').forEach(b => {
                        b.classList.remove('active');
                        b.style.animation = '';
                    });
                    
                    // Add active class to clicked button
                    this.classList.add('active');
                    this.style.animation = 'buttonPop 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)';
                    
                    // Update hidden input
                    document.getElementById('severity').value = this.dataset.severity;
                });
            });
        });

        // Form submission
        document.getElementById('alertForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Create new alert object
            const alert = {
                type: document.getElementById('alertType').value,
                location: document.getElementById('location').value,
                city: document.getElementById('city').value,
                severity: document.getElementById('severity').value,
                details: document.getElementById('details').value,
                time: 'Just now'
            };

            // Add to beginning of array
            alerts.unshift(alert);
            
            // Update display
            displayAlerts();
            
            // Show success animation
            const submitBtn = document.querySelector('.submit-btn');
            submitBtn.innerHTML = '<i class="fas fa-check"></i> Alert Sent!';
            submitBtn.style.background = 'linear-gradient(135deg, var(--success) 0%, #34d399 100%)';
            
            setTimeout(() => {
                submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> Send Alert to Citizens';
                submitBtn.style.background = 'linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%)';
            }, 2000);
            
            // Clear form but keep severity selection
            this.reset();
            document.getElementById('severity').value = 'low';
            
            // Reset to default low priority
            document.querySelectorAll('.severity-btn').forEach(b => b.classList.remove('active'));
            const lowBtn = document.querySelector('.severity-btn.low');
            lowBtn.classList.add('active');
            lowBtn.style.animation = 'buttonPop 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)';
        });

        // Display alerts with animations
        function displayAlerts() {
            const container = document.getElementById('alertsList');
            
            if (alerts.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <i class="fas fa-bell-slash"></i>
                        <h3>No alerts sent yet</h3>
                        <p>Send your first traffic alert to appear here</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = '';
            
            alerts.forEach((alert, index) => {
                const badgeClass = `badge-${alert.severity}`;
                const alertEl = document.createElement('div');
                alertEl.className = 'alert-item';
                alertEl.style.animationDelay = `${index * 0.1}s`;
                
                alertEl.innerHTML = `
                    <div class="alert-info">
                        <h4>${alert.type}</h4>
                        <p class="alert-meta">
                            <strong>${alert.location}, ${alert.city}</strong>
                            <br>
                            <small>${alert.time}</small>
                            ${alert.details ? `<br><br>${alert.details}` : ''}
                        </p>
                    </div>
                    <div style="display: flex; align-items: center; gap: 15px;">
                        <span class="alert-badge ${badgeClass}">
                            ${alert.severity.toUpperCase()}
                        </span>
                        <button class="delete-btn" onclick="deleteAlert(${index})">
                            <i class="fas fa-trash"></i>
                            Delete
                        </button>
                    </div>
                `;
                container.appendChild(alertEl);
            });
        }

        // Delete alert with animation
        function deleteAlert(index) {
            const alertItem = document.querySelectorAll('.alert-item')[index];
            alertItem.style.animation = 'fadeOut 0.3s ease-out forwards';
            
            setTimeout(() => {
                if (confirm('Delete this alert?')) {
                    alerts.splice(index, 1);
                    displayAlerts();
                    
                    // Show delete confirmation
                    showNotification('Alert deleted successfully!', 'success');
                } else {
                    alertItem.style.animation = '';
                }
            }, 300);
        }

        // Show notification
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                background: ${type === 'success' ? 'var(--success)' : 'var(--danger)'};
                color: white;
                padding: 15px 25px;
                border-radius: 10px;
                box-shadow: 0 5px 15px rgba(0,0,0,0.2);
                z-index: 1000;
                animation: slideInRight 0.3s ease-out, fadeOut 0.3s ease-out 2.7s forwards;
                display: flex;
                align-items: center;
                gap: 10px;
            `;
            notification.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                ${message}
            `;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // Add fadeOut animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fadeOut {
                from {
                    opacity: 1;
                    transform: translateX(0);
                }
                to {
                    opacity: 0;
                    transform: translateX(20px);
                }
            }
        `;
        document.head.appendChild(style);

        // Initial display
        displayAlerts();

        // Add hover effect to form controls
        document.querySelectorAll('.form-control').forEach(input => {
            input.addEventListener('focus', function() {
                this.parentElement.style.transform = 'translateY(-2px)';
            });
            
            input.addEventListener('blur', function() {
                this.parentElement.style.transform = 'translateY(0)';
            });
        });
    </script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</body>
