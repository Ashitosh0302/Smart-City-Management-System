                        <div class="park-type-icon">üå≥</div>
                        <div class="park-type-name">All Parks</div>
                        <div class="park-type-desc">All green spaces</div>
                    </div>
                    <div class="park-type-card" onclick="selectParkType('city')">
                        <div class="park-type-icon">üèôÔ∏è</div>
                        <div class="park-type-name">City Parks</div>
                        <div class="park-type-desc">Urban green spaces</div>
                    </div>
                    <div class="park-type-card" onclick="selectParkType('national')">
                        <div class="park-type-icon">üå≤</div>
                        <div class="park-type-name">National Parks</div>
                        <div class="park-type-desc">Protected natural areas</div>
                    </div>
                    <div class="park-type-card" onclick="selectParkType('botanical')">
                        <div class="park-type-icon">üå∏</div>
                        <div class="park-type-name">Botanical Gardens</div>
                        <div class="park-type-desc">Plant collections</div>
                    </div>
                    <div class="park-type-card" onclick="selectParkType('theme')">
                        <div class="park-type-icon">üé°</div>
                        <div class="park-type-name">Theme Parks</div>
                        <div class="park-type-desc">Amusement & entertainment</div>
                    </div>
                    <div class="park-type-card" onclick="selectParkType('wildlife')">
                        <div class="park-type-icon">ü¶Å</div>
                        <div class="park-type-name">Wildlife Parks</div>
                        <div class="park-type-desc">Animal habitats</div>
                    </div>
                </div>
                
                <div class="filter-header">üéØ Filter by Features</div>
