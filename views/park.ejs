        let selectedCity = null;
        let selectedParkType = 'all';
        let searchRadius = 5;
        let selectedActivities = ['all'];

        function updateDistanceValue() {
            searchRadius = document.getElementById('distanceSlider').value;
            document.getElementById('distanceValue').textContent = `${searchRadius} km`;
            document.getElementById('searchArea').textContent = `${searchRadius} km`;
        }

        document.getElementById('citySelect').addEventListener('change', function(e) {
            selectedCity = e.target.value;
            
            if (selectedCity) {
                const cityDisplay = document.getElementById('selectedCityDisplay');
                const cityName = document.getElementById('citySelect').selectedOptions[0].text;
                const cityParksCount = cityParks[selectedCity] ? cityParks[selectedCity].length : 0;
                
                document.getElementById('cityName').textContent = cityName;
                document.getElementById('totalParks').textContent = cityParksCount;
                document.getElementById('searchArea').textContent = `${searchRadius} km`;
                document.getElementById('parkTypes').textContent = selectedParkType === 'all' ? 'All Types' : parkTypeInfo[selectedParkType].name;
                
                cityDisplay.classList.add('active');
            } else {
                document.getElementById('selectedCityDisplay').classList.remove('active');
            }
        });

        function selectParkType(type) {
            selectedParkType = type;
            
            document.querySelectorAll('.park-type-card').forEach(card => {
                card.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
            
            if (selectedCity) {
                document.getElementById('parkTypes').textContent = type === 'all' ? 'All Types' : parkTypeInfo[type].name;
            }
            
            if (document.getElementById('resultsSection').classList.contains('active')) {
                searchParks();
            }
        }

        function toggleActivity(activity) {
            if (activity === 'all') {
                selectedActivities = ['all'];
                document.querySelectorAll('.activity-tag').forEach(tag => {
                    tag.classList.remove('active');
                });
                event.currentTarget.classList.add('active');
            } else {
                selectedActivities = selectedActivities.filter(a => a !== 'all');
                
                const index = selectedActivities.indexOf(activity);
                if (index === -1) {
                    selectedActivities.push(activity);
                    event.currentTarget.classList.add('active');
                } else {
                    selectedActivities.splice(index, 1);
                    event.currentTarget.classList.remove('active');
                }
                
                if (selectedActivities.length === 0) {
                    selectedActivities = ['all'];
                    document.querySelector('.activity-tag').classList.add('active');
                }
            }
            
            if (document.getElementById('resultsSection').classList.contains('active')) {
                searchParks();
            }
        }

        function getSelectedFeatures() {
            const features = [];
            const checkboxes = [
                'featurePlayground', 'featureWalking', 'featureBenches', 'featureParking',
                'featureRestrooms', 'featureFood', 'featurePets', 'featureWiFi',
                'featureLighting', 'featureDisabled'
            ];
            
            checkboxes.forEach(id => {
                if (document.getElementById(id).checked) {
                    features.push(id.replace('feature', '').toLowerCase());
                }
            });
            
            return features;
        }

        function searchParks() {
            if (!selectedCity) {
                alert('Please select a city first.');
                return;
            }
            
            document.getElementById('resultsSection').classList.add('active');
            document.getElementById('loading').style.display = 'block';
            document.getElementById('noResults').style.display = 'none';
            document.getElementById('parksGrid').innerHTML = '';
            
            let parks = [];
            if (selectedCity && cityParks[selectedCity]) {
                parks = [...cityParks[selectedCity]];
            }
            
            setTimeout(() => {
                displayParks(parks);
            }, 800);
        }

        function displayParks(parks) {
            const parksGrid = document.getElementById('parksGrid');
            const loading = document.getElementById('loading');
            const noResults = document.getElementById('noResults');
            
            loading.style.display = 'none';
            parksGrid.innerHTML = '';
            
            const filteredParks = parks.filter(park => park.distance <= searchRadius);
            
            let typeFiltered = filteredParks;
            if (selectedParkType !== 'all') {
                typeFiltered = filteredParks.filter(park => park.type === selectedParkType);
            }
            
            const selectedFeatures = getSelectedFeatures();
            let featureFiltered = typeFiltered;
            
            if (selectedFeatures.length > 0) {
                featureFiltered = typeFiltered.filter(park => {
                    return selectedFeatures.every(feature => park.features.includes(feature));
                });
            }
            
            let activityFiltered = featureFiltered;
            if (!selectedActivities.includes('all') && selectedActivities.length > 0) {
                activityFiltered = featureFiltered.filter(park => {
                    return selectedActivities.some(activity => park.activities.includes(activity));
                });
            }
            
            if (activityFiltered.length === 0) {
                noResults.style.display = 'block';
                document.getElementById('resultsCount').textContent = '0 parks found';
                return;
            }
            
            document.getElementById('resultsCount').textContent = `${activityFiltered.length} parks found`;
            
            activityFiltered.sort((a, b) => a.distance - b.distance);
            
            activityFiltered.forEach((park, index) => {
                const parkCard = createParkCard(park);
                parkCard.style.animationDelay = `${index * 0.1}s`;
                parksGrid.appendChild(parkCard);
            });
            
            const parkTypeName = selectedParkType === 'all' ? 'Parks & Gardens' : parkTypeInfo[selectedParkType].name;
            const cityName = document.getElementById('citySelect').selectedOptions[0].text;
            document.getElementById('resultsTitle').textContent = `${cityName} - ${parkTypeName}`;
        }

        function createParkCard(park) {
            const card = document.createElement('div');
            card.className = 'park-card';
            
            const featuresHtml = park.features.map(feature => {
                const icon = featureIcons[feature] || '‚úÖ';
                const label = feature.charAt(0).toUpperCase() + feature.slice(1);
                return `<span class="feature">${icon} ${label}</span>`;
            }).join('');
            
            const activitiesHtml = park.activities.map(activity => {
                const icon = activityIcons[activity] || '‚úÖ';
                const label = activity.charAt(0).toUpperCase() + activity.slice(1);
                return `<span class="activity-item">${icon} ${label}</span>`;
            }).join('');
            
            card.innerHTML = `
                <div class="park-image">
                    ${park.popular ? '<div class="popular-badge">‚≠ê Popular</div>' : ''}
                    ${park.dogFriendly ? '<div class="dog-friendly">üêï Dog Friendly</div>' : ''}
                    <div class="entry-fee ${park.entryFee === 0 ? 'free' : ''}">${park.entryFee === 0 ? 'Free Entry' : `Entry: ‚Çπ${park.entryFee}`}</div>
                    <div class="park-type">${parkTypeInfo[park.type].icon} ${park.type.toUpperCase()}</div>
                    <div class="park-distance">${park.distance.toFixed(1)} km</div>
                </div>
                <div class="park-content">
                    <div class="park-header">
                        <div>
                            <div class="park-name">${park.name}</div>
                            <div class="park-address">üìç ${park.address}</div>
                        </div>
                        <div class="park-size">${park.size}</div>
                    </div>
                    
                    <div class="park-rating">
                        <span class="stars">${'‚òÖ'.repeat(Math.floor(park.rating))}${'‚òÜ'.repeat(5 - Math.floor(park.rating))}</span>
                        <span class="rating-value">${park.rating}</span>
                        <span class="review-count">(${park.reviews} reviews)</span>
                    </div>
                    
                    <div class="park-description">
                        ${park.description}
                    </div>
                    
                    <div class="park-features">
                        ${featuresHtml}
                    </div>
                    
                    <div class="park-activities">
                        <div class="activities-title">üèÉ Popular Activities:</div>
                        <div class="activities-list">
                            ${activitiesHtml}
                        </div>
                    </div>
                    
                    <div class="park-timing">
                        üïí Open: ${park.timing}
                    </div>
                    
                    <div class="park-footer">
                        <div class="park-status">
                            <span class="${park.status === 'open' ? 'status-open' : 'status-closed'}">
                                ‚óè ${park.status === 'open' ? 'Open Now' : 'Closed'}
                            </span>
                        </div>
                        <button class="visit-button" onclick="visitPark(${park.id})">
                            <span>üìç</span> Get Directions
                        </button>
                    </div>
                </div>
            `;
            
            return card;
        }

        function visitPark(parkId) {
            let park;
            for (const city in cityParks) {
                const found = cityParks[city].find(p => p.id === parkId);
                if (found) {
                    park = found;
                    break;
                }
            }
            
            if (park) {
                alert(`üìç Getting Directions to:\n\n` +
                      `${park.name}\n` +
                      `Type: ${parkTypeInfo[park.type].name}\n` +
                      `Size: ${park.size}\n` +
                      `Entry Fee: ${park.entryFee === 0 ? 'Free' : `‚Çπ${park.entryFee}`}\n` +
                      `Address: ${park.address}\n` +
                      `Rating: ${park.rating} ‚≠ê\n` +
                      `Timing: ${park.timing}\n\n` +
                      `Opening directions in maps...`);
            }
        }

        updateDistanceValue();
