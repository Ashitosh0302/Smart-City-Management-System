<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Electricity Complaint | Smart City</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #3498db;
            --electric: #f39c12;
            --danger: #e74c3c;
            --success: #27ae60;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #2c3e50, #1a2a6c);
            min-height: 100vh;
            padding: 20px;
            position: relative;
            overflow-x: hidden;
        }

        /* Simple Electricity Animation */
        .electric-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .electric-bolt {
            position: absolute;
            font-size: 2rem;
            color: #f1c40f;
            opacity: 0.6;
            animation: boltFloat 4s infinite;
        }

        @keyframes boltFloat {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(180deg); }
        }

        .glow-dot {
            position: absolute;
            width: 10px;
            height: 10px;
            background: #f39c12;
            border-radius: 50%;
            animation: glowPulse 2s infinite;
        }

        @keyframes glowPulse {
            0%, 100% { transform: scale(1); opacity: 0.3; }
            50% { transform: scale(2); opacity: 0.8; }
        }

        /* Header */
        .header {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo {
            font-size: 2.2rem;
            font-weight: 700;
            color: white;
            display: inline-flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 10px;
        }

        .logo i {
            animation: logoPulse 2s infinite;
            color: #f1c40f;
        }

        @keyframes logoPulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.2); }
        }

        /* Form Card */
        .form-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .form-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .section-title {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid var(--primary);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .section-title i {
            color: var(--electric);
        }

        /* Form Elements */
        .form-control, .form-select, textarea {
            border: 2px solid #ddd;
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 15px;
        }

        .form-control:focus, .form-select:focus, textarea:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        }

        /* Selection Cards */
        .card-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }

        .option-card {
            background: white;
            border: 2px solid #dee2e6;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

        .option-card:hover {
            transform: translateY(-5px);
            border-color: var(--primary);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .option-card.active {
            background: rgba(52, 152, 219, 0.1);
            border-color: var(--primary);
            transform: translateY(-5px);
        }

        .option-icon {
            font-size: 2rem;
            margin-bottom: 10px;
            color: var(--primary);
        }

        /* GPS Section */
        .gps-box {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin-top: 10px;
        }

        .location-btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: all 0.3s;
        }

        .location-btn:hover {
            background: #2980b9;
            transform: translateY(-2px);
        }

        /* Upload Area */
        .upload-box {
            border: 2px dashed var(--primary);
            border-radius: 10px;
            padding: 40px;
            text-align: center;
            cursor: pointer;
            background: #f8f9fa;
            margin-bottom: 20px;
            transition: all 0.3s;
        }

        .upload-box:hover {
            background: #e9ecef;
        }

        .upload-icon {
            font-size: 3rem;
            color: var(--primary);
            margin-bottom: 15px;
        }

        /* Submit Button */
        .submit-btn {
            background: linear-gradient(to right, var(--electric), var(--primary));
            color: white;
            border: none;
            padding: 15px 40px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

        .submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }

        /* Success Modal */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        .modal-overlay.show {
            display: flex;
        }

        .modal-content {
            background: white;
            border-radius: 15px;
            padding: 40px;
            text-align: center;
            max-width: 400px;
            width: 90%;
        }

        .modal-icon {
            font-size: 4rem;
            color: var(--success);
            margin-bottom: 20px;
        }

        /* Media Preview */
        .media-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 20px;
        }

        .media-item {
            width: 120px;
            height: 120px;
            border-radius: 8px;
            overflow: hidden;
            position: relative;
        }

        .media-item img, .media-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .remove-media {
            position: absolute;
            top: 5px;
            right: 5px;
            background: var(--danger);
            color: white;
            border: none;
            width: 25px;
            height: 25px;
            border-radius: 50%;
            font-size: 14px;
            cursor: pointer;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .card-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .form-card {
                padding: 20px;
            }
        }

        @media (max-width: 576px) {
            .card-grid {
                grid-template-columns: 1fr;
            }
            
            body {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <!-- Background Animation -->
    <div class="electric-bg" id="electricBg"></div>

    <!-- Header -->
    <div class="header">
        <div class="logo">
            <i class="fas fa-bolt"></i>
            Electricity Complaint Portal
        </div>
        <p class="text-white">Report electricity issues. Help us restore power faster.</p>
    </div>

    <!-- Main Form -->
    <div class="form-container">
        <div class="form-card">
            <form id="complaintForm">
                <!-- Section 1: Consumer Details -->
                <div class="mb-4">
                    <h4 class="section-title">
                        <i class="fas fa-user"></i>
                        Consumer Details
                    </h4>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <label>Consumer Name *</label>
                            <input type="text" class="form-control" name="consumerName" required>
                        </div>
                        <div class="col-md-6">
                            <label>Service Number *</label>
                            <input type="text" class="form-control" name="serviceNumber" required>
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label>Meter Number *</label>
                            <input type="text" class="form-control" name="meterNumber" required>
                        </div>
                        <div class="col-md-6">
                            <label>Contact Number *</label>
                            <input type="tel" class="form-control" name="contactNumber" required pattern="[0-9]{10}">
                        </div>
                    </div>
                </div>

                <!-- Section 2: Connection & Provider -->
                <div class="mb-4">
                    <h4 class="section-title">
                        <i class="fas fa-plug"></i>
                        Connection Details
                    </h4>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <label>Type of Connection *</label>
                            <div class="card-grid">
                                <div class="option-card active" onclick="selectOption('connection', 'domestic')">
                                    <i class="fas fa-home option-icon"></i>
                                    <div>Domestic</div>
                                </div>
                                <div class="option-card" onclick="selectOption('connection', 'commercial')">
                                    <i class="fas fa-store option-icon"></i>
                                    <div>Commercial</div>
                                </div>
                                <div class="option-card" onclick="selectOption('connection', 'industrial')">
                                    <i class="fas fa-industry option-icon"></i>
                                    <div>Industrial</div>
                                </div>
                            </div>
                            <input type="hidden" name="connectionType" id="connectionType" value="domestic">
                        </div>
                        
                        <div class="col-md-6">
                            <label>Electricity Provider *</label>
                            <div class="card-grid">
                                <div class="option-card active" onclick="selectOption('provider', 'MSECL')">
                                    <i class="fas fa-bolt option-icon"></i>
                                    <div>MSECL</div>
                                </div>
                                <div class="option-card" onclick="selectOption('provider', 'BESCOM')">
                                    <i class="fas fa-city option-icon"></i>
                                    <div>BESCOM</div>
                                </div>
                                <div class="option-card" onclick="selectOption('provider', 'ADANI')">
                                    <i class="fas fa-industry option-icon"></i>
                                    <div>ADANI</div>
                                </div>
                            </div>
                            <input type="hidden" name="provider" id="provider" value="MSECL">
                        </div>
                    </div>
                </div>

                <!-- Section 3: Location -->
                <div class="mb-4">
                    <h4 class="section-title">
                        <i class="fas fa-map-marker-alt"></i>
                        Location Details
                    </h4>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <label>Exact Address *</label>
                            <textarea class="form-control" name="address" rows="3" required></textarea>
                        </div>
                    </div>
                    
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label>Area/Locality *</label>
                            <input type="text" class="form-control" name="area" required>
                        </div>
                        <div class="col-md-6">
                            <label>Ward/Zone *</label>
                            <select class="form-select" name="ward" required>
                                <option value="">Select</option>
                                <option>Ward 1</option>
                                <option>Ward 2</option>
                                <option>Ward 3</option>
                                <option>Ward 4</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- GPS -->
                    <div class="mt-3">
                        <label>GPS Location *</label>
                        <div class="gps-box">
                            <button type="button" class="location-btn" onclick="getLocation()">
                                <i class="fas fa-location-arrow"></i>
                                Get Current Location
                            </button>
                            <span id="locationStatus" class="ms-3">Click to get location</span>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="latitude" 
                                           name="latitude" placeholder="Latitude" readonly required>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" id="longitude" 
                                           name="longitude" placeholder="Longitude" readonly required>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Section 4: Issue Details -->
                <div class="mb-4">
                    <h4 class="section-title">
                        <i class="fas fa-exclamation-triangle"></i>
                        Issue Details
                    </h4>
                    
                    <label>Type of Issue *</label>
                    <div class="card-grid">
                        <div class="option-card active" onclick="selectOption('issue', 'power_cut')">
                            <i class="fas fa-power-off option-icon"></i>
                            <div>Power Cut</div>
                        </div>
                        <div class="option-card" onclick="selectOption('issue', 'fluctuations')">
                            <i class="fas fa-chart-line option-icon"></i>
                            <div>Fluctuations</div>
                        </div>
                        <div class="option-card" onclick="selectOption('issue', 'low_voltage')">
                            <i class="fas fa-tachometer-alt option-icon"></i>
                            <div>Low Voltage</div>
                        </div>
                        <div class="option-card" onclick="selectOption('issue', 'meter_issue')">
                            <i class="fas fa-tachometer-alt option-icon"></i>
                            <div>Meter Issue</div>
                        </div>
                        <div class="option-card" onclick="selectOption('issue', 'sparking')">
                            <i class="fas fa-fire option-icon"></i>
                            <div>Sparking</div>
                        </div>
                        <div class="option-card" onclick="selectOption('issue', 'streetlight')">
                            <i class="fas fa-lightbulb option-icon"></i>
                            <div>Streetlight</div>
                        </div>
                        <div class="option-card" onclick="selectOption('issue', 'transformer')">
                            <i class="fas fa-industry option-icon"></i>
                            <div>Transformer</div>
                        </div>
                    </div>
                    <input type="hidden" name="issueType" id="issueType" value="power_cut">
                    
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label>Issue Start Date & Time *</label>
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="date" class="form-control" name="issueDate" required>
                                </div>
                                <div class="col-md-6">
                                    <input type="time" class="form-control" name="issueTime" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label>Duration</label>
                            <select class="form-select" name="duration">
                                <option value="">Select</option>
                                <option>Less than 1 hour</option>
                                <option>1-4 hours</option>
                                <option>4-12 hours</option>
                                <option>12-24 hours</option>
                                <option>More than 1 day</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Section 5: Media Upload -->
                <div class="mb-4">
                    <h4 class="section-title">
                        <i class="fas fa-camera"></i>
                        Photo/Video Evidence
                    </h4>
                    
                    <div class="upload-box" onclick="document.getElementById('fileInput').click()">
                        <i class="fas fa-cloud-upload-alt upload-icon"></i>
                        <h5>Click to Upload</h5>
                        <p class="text-muted">Upload photos/videos of the issue</p>
                        <small>Max 5 files, 10MB each</small>
                    </div>
                    <input type="file" id="fileInput" multiple accept="image/*,video/*" class="d-none" onchange="handleFiles(event)">
                    
                    <div id="mediaPreview" class="media-grid"></div>
                </div>

                <!-- Submit -->
                <div class="text-center mt-4">
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-paper-plane"></i>
                        Submit Complaint
                    </button>
                    <p class="text-muted mt-3">
                        <i class="fas fa-info-circle"></i>
                        We'll respond within 24 hours
                    </p>
                </div>
            </form>
        </div>
    </div>

    <!-- Success Modal -->
    <div class="modal-overlay" id="successModal">
        <div class="modal-content">
            <div class="modal-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h4>Complaint Submitted!</h4>
            <p>Your complaint ID: <strong id="complaintId">EC-<%= Date.now().toString().slice(-6) %></strong></p>
            <p class="text-muted">We'll contact you within 24 hours</p>
            <button class="btn btn-primary mt-3" onclick="resetForm()">
                <i class="fas fa-redo me-2"></i>Submit Another
            </button>
        </div>
    </div>

    <script>
        // Create background animation
        function createAnimation() {
            const bg = document.getElementById('electricBg');
            
            // Add electric bolts
            for(let i = 0; i < 10; i++) {
                const bolt = document.createElement('div');
                bolt.className = 'electric-bolt';
                bolt.innerHTML = '⚡';
                bolt.style.left = Math.random() * 100 + '%';
                bolt.style.top = Math.random() * 100 + '%';
                bolt.style.animationDelay = Math.random() * 4 + 's';
                bg.appendChild(bolt);
            }
            
            // Add glow dots
            for(let i = 0; i < 20; i++) {
                const dot = document.createElement('div');
                dot.className = 'glow-dot';
                dot.style.left = Math.random() * 100 + '%';
                dot.style.top = Math.random() * 100 + '%';
                dot.style.animationDelay = Math.random() * 2 + 's';
                bg.appendChild(dot);
            }
        }

        // Select option function (for all card selections)
        function selectOption(type, value) {
            // Remove active class from all cards in same grid
            const card = event.target.closest('.option-card');
            const grid = card.parentElement;
            grid.querySelectorAll('.option-card').forEach(c => {
                c.classList.remove('active');
            });
            
            // Add active to clicked card
            card.classList.add('active');
            
            // Update hidden input
            document.getElementById(type + 'Type' || type).value = value;
        }

        // Get GPS location
        function getLocation() {
            const status = document.getElementById('locationStatus');
            const latInput = document.getElementById('latitude');
            const lngInput = document.getElementById('longitude');
            const btn = event.target.closest('.location-btn');
            
            if(!navigator.geolocation) {
                status.textContent = 'Location not supported';
                status.style.color = 'red';
                return;
            }
            
            status.textContent = 'Getting location...';
            btn.disabled = true;
            
            navigator.geolocation.getCurrentPosition(
                function(position) {
                    latInput.value = position.coords.latitude.toFixed(6);
                    lngInput.value = position.coords.longitude.toFixed(6);
                    status.textContent = 'Location captured!';
                    status.style.color = 'green';
                    btn.disabled = false;
                },
                function(error) {
                    status.textContent = 'Failed to get location';
                    status.style.color = 'red';
                    btn.disabled = false;
                    alert('Please allow location access or enter manually');
                }
            );
        }

        // Handle file upload
        let uploadedFiles = [];

        function handleFiles(event) {
            const files = Array.from(event.target.files);
            const preview = document.getElementById('mediaPreview');
            
            if(uploadedFiles.length + files.length > 5) {
                alert('Maximum 5 files allowed');
                return;
            }
            
            files.forEach(file => {
                if(file.size > 10 * 1024 * 1024) {
                    alert('File too large (max 10MB)');
                    return;
                }
                
                uploadedFiles.push(file);
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    const div = document.createElement('div');
                    div.className = 'media-item';
                    
                    if(file.type.startsWith('image/')) {
                        div.innerHTML = `
                            <img src="${e.target.result}">
                            <button class="remove-media" onclick="removeFile(this)">×</button>
                        `;
                    } else {
                        div.innerHTML = `
                            <video src="${e.target.result}" controls></video>
                            <button class="remove-media" onclick="removeFile(this)">×</button>
                        `;
                    }
                    
                    div.dataset.name = file.name;
                    preview.appendChild(div);
                };
                reader.readAsDataURL(file);
            });
            
            event.target.value = '';
        }

        // Remove file
        function removeFile(btn) {
            const item = btn.parentElement;
            const fileName = item.dataset.name;
            
            uploadedFiles = uploadedFiles.filter(f => f.name !== fileName);
            item.remove();
        }

        // Form submission
        document.getElementById('complaintForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Basic validation
            const lat = document.getElementById('latitude').value;
            const lng = document.getElementById('longitude').value;
            
            if(!lat || !lng) {
                alert('Please get your location first');
                return;
            }
            
            // Show success modal
            const complaintId = 'EC-' + Date.now().toString().slice(-6);
            document.getElementById('complaintId').textContent = complaintId;
            document.getElementById('successModal').classList.add('show');
            
            // Here you would send data to server
            console.log('Form submitted with ID:', complaintId);
        });

        // Reset form
        function resetForm() {
            document.getElementById('successModal').classList.remove('show');
            document.getElementById('complaintForm').reset();
            
            // Reset location
            document.getElementById('latitude').value = '';
            document.getElementById('longitude').value = '';
            document.getElementById('locationStatus').textContent = 'Click to get location';
            document.getElementById('locationStatus').style.color = '';
            
            // Reset to today's date
            const today = new Date().toISOString().split('T')[0];
            document.querySelector('input[name="issueDate"]').value = today;
            
            // Reset to current time
            const now = new Date();
            const time = now.getHours().toString().padStart(2, '0') + ':' + 
                         now.getMinutes().toString().padStart(2, '0');
            document.querySelector('input[name="issueTime"]').value = time;
            
            // Clear files
            uploadedFiles = [];
            document.getElementById('mediaPreview').innerHTML = '';
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            createAnimation();
            
            // Set default dates
            const today = new Date().toISOString().split('T')[0];
            const now = new Date();
            const time = now.getHours().toString().padStart(2, '0') + ':' + 
                         now.getMinutes().toString().padStart(2, '0');
            
            document.querySelector('input[name="issueDate"]').value = today;
            document.querySelector('input[name="issueTime"]').value = time;
        });
    </script>
</body>
</html>