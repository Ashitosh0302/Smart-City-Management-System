    <script>
        // City stations data (20 stations per city as requested)
        const cityStations = {
            pune: [
                "Swargate Bus Stand", "Shivaji Nagar", "Pune Station", "Kothrud", "Hinjewadi",
                "Wakad", "Baner", "Aundh", "Hadapsar", "Kondhwa",
                "Katraj", "Nigdi", "Pimpri", "Chinchwad", "Bhosari",
                "Kharadi", "Viman Nagar", "Kalyani Nagar", "Yerwada", "Deccan Gymkhana"
            ],
            mumbai: [
                "Mumbai Central", "Bandra Terminus", "Dadar", "Borivali", "Andheri",
                "Ghatkopar", "Kurla", "Thane", "Navi Mumbai", "Chembur",
                "Malad", "Jogeshwari", "Santacruz", "Churchgate", "Colaba",
                "Byculla", "Sion", "Mulund", "Bhandup", "Vikhroli"
            ],
            bangalore: [
                "Majestic Bus Stand", "Electronic City", "Whitefield", "Koramangala", "Indiranagar",
                "Yeshwantpur", "Silk Board", "Marathahalli", "Jayanagar", "BTM Layout",
                "Banashankari", "Hebbal", "Malleswaram", "Rajajinagar", "HSR Layout",
                "Bellandur", "KR Puram", "Vijay Nagar", "Yelahanka", "Basavanagudi"
            ]
        };

        // Bus types and operators
        const busOperators = [
            "Sharma Travels", "Patel Tours", "Royal Express", "City Link", "Star Lines",
            "Comfort Rides", "Luxury Express", "Swift Travels", "Green Line", "Sky Bus"
        ];

        const busTypes = ["AC Sleeper", "Non-AC Sleeper", "AC Seater", "Non-AC Seater", "Volvo AC"];

        function updateStations() {
            const city = document.getElementById('city').value;
            const fromStation = document.getElementById('fromStation');
            const toStation = document.getElementById('toStation');
            
            if (city) {
                fromStation.disabled = false;
                toStation.disabled = false;
                
                // Clear existing options
                fromStation.innerHTML = '<option value="">-- Select From Station --</option>';
                toStation.innerHTML = '<option value="">-- Select To Station --</option>';
                
                // Add new stations
                cityStations[city].forEach(station => {
                    const fromOption = document.createElement('option');
                    fromOption.value = station;
                    fromOption.textContent = station;
                    fromStation.appendChild(fromOption);
                    
                    const toOption = document.createElement('option');
                    toOption.value = station;
                    toOption.textContent = station;
                    toStation.appendChild(toOption);
                });
            } else {
                fromStation.disabled = true;
                toStation.disabled = true;
                fromStation.innerHTML = '<option value="">-- Select From Station --</option>';
                toStation.innerHTML = '<option value="">-- Select To Station --</option>';
            }
        }

        function searchBuses() {
            const city = document.getElementById('city').value;
            const fromStation = document.getElementById('fromStation').value;
            const toStation = document.getElementById('toStation').value;
            const date = document.getElementById('date').value;
            
            // Validation
            if (!city || !fromStation || !toStation) {
                alert('Please select city and both stations');
                return;
            }
            
            if (fromStation === toStation) {
                alert('From and To stations cannot be the same');
                return;
            }
            
            // Show results section
            document.getElementById('resultsSection').style.display = 'block';
            document.getElementById('loading').style.display = 'block';
            document.getElementById('noResults').style.display = 'none';
            document.getElementById('busResults').innerHTML = '';
            
            // Update route info
            document.getElementById('routeInfo').textContent = `${fromStation} ‚Üí ${toStation}`;
            document.getElementById('dateInfo').textContent = new Date(date).toDateString();
            
            // Generate time slots (every 30 minutes from 6:00 AM to 11:30 PM)
            const timeSlots = [];
            for (let hour = 6; hour < 24; hour++) {
                for (let minute = 0; minute < 60; minute += 30) {
                    if (hour === 23 && minute === 30) break;
                    const time = `${hour.toString().padStart(2, '0')}:${minute.toString().padStart(2, '0')}`;
                    timeSlots.push(time);
                }
            }
            
            // Display time slots
            const timeSlotsDiv = document.getElementById('timeSlots');
            timeSlotsDiv.innerHTML = '';
            timeSlots.forEach(time => {
                const span = document.createElement('span');
                span.className = 'time-slot';
                span.textContent = time;
                timeSlotsDiv.appendChild(span);
            });
            
            // Simulate API call delay
            setTimeout(() => {
                generateBusResults(city, fromStation, toStation, date, timeSlots);
            }, 1000);
        }

        function generateBusResults(city, fromStation, toStation, date, timeSlots) {
            const busResults = document.getElementById('busResults');
            const loading = document.getElementById('loading');
            const noResults = document.getElementById('noResults');
            
            loading.style.display = 'none';
            
            // Clear previous results
            busResults.innerHTML = '';
            
            // Generate random number of buses (3-8)
            const numBuses = Math.floor(Math.random() * 6) + 3;
            
            if (numBuses === 0) {
                noResults.style.display = 'block';
                document.getElementById('resultsCount').textContent = '0 buses found';
                return;
            }
            
            document.getElementById('resultsCount').textContent = `${numBuses} buses found`;
            
            // Generate bus cards
            for (let i = 0; i < numBuses; i++) {
                const bus = createRandomBus(i, timeSlots);
                const busCard = createBusCard(bus);
                busResults.appendChild(busCard);
            }
        }

        function createRandomBus(index, timeSlots) {
            const randomTime = timeSlots[Math.floor(Math.random() * timeSlots.length)];
            const duration = Math.floor(Math.random() * 4) + 2; // 2-5 hours
            const price = Math.floor(Math.random() * 1000) + 500; // 500-1500
            
            // Calculate arrival time
            const [hours, minutes] = randomTime.split(':').map(Number);
            const arrivalHours = hours + duration;
            const arrivalTime = `${arrivalHours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}`;
            
            return {
                id: index + 1,
                name: busOperators[Math.floor(Math.random() * busOperators.length)],
                type: busTypes[Math.floor(Math.random() * busTypes.length)],
                departure: randomTime,
                arrival: arrivalTime,
                duration: `${duration} hours`,
                seats: Math.floor(Math.random() * 10) + 5, // 5-15 seats available
                price: price,
                amenities: ['WiFi', 'Water Bottle', 'Charging Point', 'Blanket', 'Snacks'].slice(0, Math.floor(Math.random() * 4) + 2)
            };
        }

        function createBusCard(bus) {
            const card = document.createElement('div');
            card.className = 'bus-card';
            
            card.innerHTML = `
                <div class="bus-header">
                    <div class="bus-name">${bus.name} #${bus.id}</div>
                    <div class="bus-type">${bus.type}</div>
                </div>
                
                <div class="bus-details">
                    <div class="detail-item">
                        <span class="detail-label">Departure</span>
                        <span class="detail-value">${bus.departure}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Arrival</span>
                        <span class="detail-value">${bus.arrival}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Duration</span>
                        <span class="detail-value">${bus.duration}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Seats Available</span>
                        <span class="detail-value">${bus.seats} seats</span>
                    </div>
                </div>
                
                <div class="bus-footer">
                    <div class="price">‚Çπ${bus.price}</div>
                    <button class="book-button" onclick="bookBus(${bus.id})">Book Now</button>
                </div>
                
                <div style="margin-top: 10px; font-size: 0.9rem; color: #666;">
                    <strong>Amenities:</strong> ${bus.amenities.join(', ')}
                </div>
            `;
            
            return card;
        }

        function bookBus(busId) {
            const fromStation = document.getElementById('fromStation').value;
            const toStation = document.getElementById('toStation').value;
            const date = document.getElementById('date').value;
            
            alert(`Booking confirmed!\n\nBus ID: #${busId}\nRoute: ${fromStation} to ${toStation}\nDate: ${new Date(date).toDateString()}\n\nPlease proceed to payment.`);
        }

        // Initialize date to today
        document.getElementById('date').valueAsDate = new Date();
    </script>
