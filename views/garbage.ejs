        // Select location method
        function selectLocationMethod(method) {
            locationMethod = method;
            
            // Update button states
            document.querySelectorAll('.method-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
            
            // Show/hide sections
            document.getElementById('gpsSection').classList.remove('active');
            document.getElementById('addressSection').classList.remove('active');
            document.getElementById(method + 'Section').classList.add('active');
            
            // Reset validation
            document.getElementById('gpsSection').required = method === 'gps';
            document.getElementById('addressSection').required = method === 'address';
        }

        // Get GPS Location - Enhanced Version
        function getGPSLocation() {
            const status = document.getElementById('locationStatus');
            const gpsButton = document.getElementById('gpsButton');
            const locationDisplay = document.getElementById('locationDisplay');
            
            // Check if browser supports geolocation
            if (!navigator.geolocation) {
                showNotification('Geolocation is not supported by your browser', 'error');
                return;
            }
            
            // Show loading state
            status.textContent = 'Getting location... Please allow permission if prompted';
            status.style.color = '#f39c12';
            gpsButton.disabled = true;
            gpsButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Getting Location...';
            locationDisplay.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Scanning location...';
            
            // Geolocation options
            const options = {
                enableHighAccuracy: true,
                timeout: 20000,
                maximumAge: 0
            };
            
            navigator.geolocation.getCurrentPosition(
                // Success callback
                (position) => {
                    const lat = position.coords.latitude;
                    const lng = position.coords.longitude;
                    const accuracy = position.coords.accuracy;
                    
                    // Store coordinates
                    gpsCoordinates = { lat, lng, accuracy };
                    
                    // Update UI
                    status.textContent = 'Location captured successfully!';
                    status.style.color = '#27ae60';
                    gpsButton.disabled = false;
                    gpsButton.innerHTML = '<i class="fas fa-sync-alt"></i> Update Location';
                    
                    // Initialize map
                    initMap(lat, lng);
                    
                    // Get address from coordinates
                    getAddressFromCoordinates(lat, lng);
                    
                    // Show success notification
                    showNotification('Location captured successfully!', 'success');
                    
                    // Log for debugging
                    console.log('GPS Location captured:', { lat, lng, accuracy });
                },
                // Error callback
                (error) => {
                    gpsButton.disabled = false;
                    gpsButton.innerHTML = '<i class="fas fa-location-arrow"></i> Get Current Location';
                    
                    let errorMessage = 'Unable to get location. ';
                    
                    switch(error.code) {
                        case error.PERMISSION_DENIED:
                            errorMessage = 'Location permission denied. Please allow access in browser settings.';
                            showNotification(errorMessage, 'error');
                            locationDisplay.innerHTML = '<i class="fas fa-exclamation-triangle text-warning"></i> ' + errorMessage;
                            break;
                        case error.POSITION_UNAVAILABLE:
                            errorMessage = 'Location unavailable. Check GPS/internet connection.';
                            showNotification(errorMessage, 'error');
                            locationDisplay.innerHTML = '<i class="fas fa-wifi-slash text-danger"></i> ' + errorMessage;
                            break;
                        case error.TIMEOUT:
                            errorMessage = 'Location request timed out. Please try again.';
                            showNotification(errorMessage, 'error');
                            locationDisplay.innerHTML = '<i class="fas fa-clock text-danger"></i> ' + errorMessage;
                            break;
                        default:
                            errorMessage = 'Location error. Please try again.';
                            showNotification(errorMessage, 'error');
                            locationDisplay.innerHTML = '<i class="fas fa-exclamation-circle text-danger"></i> ' + errorMessage;
                            break;
                    }
                    
                    status.textContent = errorMessage;
                    status.style.color = '#e74c3c';
                },
                options
            );
        }

        // Initialize map
        function initMap(lat, lng) {
            const mapElement = document.getElementById('locationMap');
            mapElement.style.display = 'block';
            
            // Initialize map if not exists
            if (!map) {
                map = L.map('locationMap').setView([lat, lng], 16);
                
                // Add OpenStreetMap tiles
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: 'Â© OpenStreetMap contributors'
                }).addTo(map);
            } else {
                map.setView([lat, lng], 16);
            }
            
            // Add or update marker
            if (marker) {
                marker.setLatLng([lat, lng]);
            } else {
                marker = L.marker([lat, lng], {
                    draggable: true,
                    title: 'Garbage Location'
                }).addTo(map);
                
                // Update coordinates if marker is dragged
                marker.on('dragend', function(e) {
                    const newPos = marker.getLatLng();
                    gpsCoordinates = { lat: newPos.lat, lng: newPos.lng };
                    getAddressFromCoordinates(newPos.lat, newPos.lng);
                });
            }
        }

        // Get address from coordinates using Nominatim
        async function getAddressFromCoordinates(lat, lng) {
            const locationDisplay = document.getElementById('locationDisplay');
            
            try {
                locationDisplay.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Getting address...';
                
                const response = await fetch(
                    `https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}&zoom=18&addressdetails=1`
                );
                
                if (!response.ok) throw new Error('Geocoding failed');
                
                const data = await response.json();
                
                if (data && data.display_name) {
                    // Format address
                    let address = data.display_name;
                    // Shorten if too long
                    if (address.length > 100) {
                        address = address.substring(0, 100) + '...';
                    }
                    
                    locationDisplay.innerHTML = `
                        <div class="text-start">
                            <div class="d-flex align-items-center mb-1">
                                <i class="fas fa-map-marker-alt text-primary me-2"></i>
                                <strong>Location Found:</strong>
                            </div>
                            <div class="small">${address}</div>
                            <div class="text-muted mt-2">
                                <small>Coordinates: ${lat.toFixed(6)}, ${lng.toFixed(6)}</small>
                            </div>
                        </div>
                    `;
                    locationDisplay.classList.add('active');
                    
                    // Update form fields for reference
                    if (data.address) {
                        document.getElementById('streetAddress').value = 
                            data.address.road || data.address.neighbourhood || '';
                        document.getElementById('city').value = 
                            data.address.city || data.address.town || data.address.village || '';
                        document.getElementById('zipCode').value = 
                            data.address.postcode || '';
                    }
                    
                    showNotification('Address found and mapped!', 'success');
                } else {
                    throw new Error('No address found');
                }
            } catch (error) {
                console.error('Geocoding error:', error);
                locationDisplay.innerHTML = `
                    <div class="text-center">
                        <i class="fas fa-exclamation-triangle text-warning mb-2"></i>
                        <div>Location coordinates captured</div>
                        <small class="text-muted">${lat.toFixed(6)}, ${lng.toFixed(6)}</small>
                        <div class="mt-2"><small>Unable to fetch address details</small></div>
                    </div>
                `;
                locationDisplay.classList.add('active');
                showNotification('Coordinates captured but address not found', 'warning');
            }
        }

        // Show notification
        function showNotification(message, type = 'info') {
            const notification = document.getElementById('notification');
            const text = document.getElementById('notificationText');
            
            // Set icon and color based on type
            let icon = 'fa-info-circle';
            let color = 'var(--primary)';
            
            switch(type) {
                case 'success':
                    icon = 'fa-check-circle';
                    color = '#27ae60';
                    break;
                case 'error':
                    icon = 'fa-exclamation-circle';
                    color = '#e74c3c';
                    break;
                case 'warning':
                    icon = 'fa-exclamation-triangle';
                    color = '#f39c12';
                    break;
            }
            
            notification.innerHTML = `<i class="fas ${icon}" style="color: ${color}"></i><span>${message}</span>`;
            notification.classList.add('show');
            
            // Auto hide after 5 seconds
            setTimeout(() => {
                notification.classList.remove('show');
            }, 5000);
        }

        // Garbage type selection
        function selectGarbageType(type) {
            document.getElementById('garbageType').value = type;
            
            document.querySelectorAll('.category-card').forEach(card => {
                card.classList.remove('active');
            });
            
            event.currentTarget.classList.add('active');
            
            const otherInput = document.getElementById('otherGarbageInput');
            const otherGarbage = document.getElementById('otherGarbage');
            if (type === 'other') {
                otherInput.style.display = 'block';
