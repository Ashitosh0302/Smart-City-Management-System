    <script>
        // Global variables
        let map = null;
        let marker = null;
        let uploadedMedia = [];
        let locationMethod = 'gps';
        let gpsCoordinates = null;

        // Create enhanced garbage animation
        function createGarbageAnimation() {
            const container = document.getElementById('garbageAnimation');
            
            // Create trash bags
            for (let i = 0; i < 15; i++) {
