        // Quantity selection
        function selectQuantity(type) {
            document.getElementById('quantity').value = type;
            
            document.querySelectorAll('.quantity-card').forEach(card => {
                card.classList.remove('active');
            });
            
            event.currentTarget.classList.add('active');
        }

        // Issue type selection
        function selectIssueType(type) {
            document.getElementById('issueType').value = type;
            
            document.querySelectorAll('.category-card').forEach(card => {
                card.classList.remove('active');
            });
            
            event.currentTarget.classList.add('active');
        }

        // Media upload functions
        function handleMediaUpload(event) {
            const files = Array.from(event.target.files);
            
            if (uploadedMedia.length + files.length > 5) {
                showNotification('Maximum 5 files allowed!', 'error');
                return;
            }
            
            files.forEach(file => {
                if (file.size > 10 * 1024 * 1024) {
                    showNotification(`"${file.name}" is too large (max 10MB)`, 'error');
                    return;
                }
                
                if (!file.type.startsWith('image/') && !file.type.startsWith('video/')) {
                    showNotification(`"${file.name}" is not an image or video file`, 'error');
                    return;
                }
                
                uploadedMedia.push(file);
                displayMediaPreview(file);
            });
            
            event.target.value = '';
            showNotification(`Added ${files.length} file(s)`, 'success');
        }

        function displayMediaPreview(file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const preview = document.getElementById('mediaPreview');
                const mediaId = `media-${Date.now()}`;
                
                const mediaItem = document.createElement('div');
                mediaItem.className = 'media-item';
                mediaItem.id = mediaId;
                
                if (file.type.startsWith('image/')) {
                    mediaItem.innerHTML = `
                        <img src="${e.target.result}" alt="Photo">
                        <button class="remove-btn" onclick="removeMedia('${mediaId}')">Ã</button>
                    `;
                } else {
                    mediaItem.innerHTML = `
                        <video src="${e.target.result}" controls></video>
                        <button class="remove-btn" onclick="removeMedia('${mediaId}')">Ã</button>
                    `;
                }
                
                mediaItem.dataset.filename = file.name;
                preview.appendChild(mediaItem);
            };
            reader.readAsDataURL(file);
        }

        function removeMedia(mediaId) {
            const mediaItem = document.getElementById(mediaId);
            const filename = mediaItem.dataset.filename;
            
            uploadedMedia = uploadedMedia.filter(file => file.name !== filename);
            mediaItem.remove();
            showNotification('File removed', 'info');
        }

        // Form submission
        document.getElementById('garbageComplaintForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Validate location based on selected method
            if (locationMethod === 'gps') {
                if (!gpsCoordinates) {
                    showNotification('Please get your location first!', 'error');
                    document.getElementById('locationStatus').style.color = '#e74c3c';
                    document.getElementById('locationStatus').textContent = 'Location is required!';
                    document.getElementById('gpsButton').focus();
                    return;
                }
            } else {
                // Validate address fields
                const streetAddress = document.getElementById('streetAddress').value.trim();
                const city = document.getElementById('city').value.trim();
                const zipCode = document.getElementById('zipCode').value.trim();
                
                if (!streetAddress || !city || !zipCode) {
                    showNotification('Please fill all address fields!', 'error');
                    return;
                }
            }
            
            // Validate other garbage type if selected
            const garbageType = document.getElementById('garbageType').value;
            if (garbageType === 'other') {
                const otherGarbage = document.getElementById('otherGarbage').value.trim();
                if (!otherGarbage) {
                    showNotification('Please specify the garbage type', 'error');
                    return;
                }
            }
            
            // All validations passed, submit
            submitComplaint();
        });

        // Submit complaint
        function submitComplaint() {
            // Generate complaint ID
            const complaintId = 'GC-' + Date.now().toString().slice(-8);
            document.getElementById('complaintId').textContent = complaintId;
            
            // Show success modal
            document.getElementById('successModal').classList.add('show');
            
            // Prepare form data
            const formData = new FormData();
            
            // Add location data
            if (locationMethod === 'gps') {
                formData.append('locationMethod', 'gps');
                formData.append('latitude', gpsCoordinates.lat);
                formData.append('longitude', gpsCoordinates.lng);
                formData.append('accuracy', gpsCoordinates.accuracy);
                
                // Get address from display
                const locationText = document.getElementById('locationDisplay').innerText;
                formData.append('locationText', locationText);
            } else {
                formData.append('locationMethod', 'address');
                formData.append('streetAddress', document.getElementById('streetAddress').value);
                formData.append('city', document.getElementById('city').value);
                formData.append('zipCode', document.getElementById('zipCode').value);
                formData.append('ward', document.getElementById('ward').value);
                formData.append('locationDetails', document.getElementById('locationDetails').value);
            }
            
            // Add other form data
            formData.append('garbageType', document.getElementById('garbageType').value);
            if (document.getElementById('garbageType').value === 'other') {
                formData.append('otherGarbage', document.getElementById('otherGarbage').value);
            }
            formData.append('quantity', document.getElementById('quantity').value);
            formData.append('issueType', document.getElementById('issueType').value);
            
            // Add uploaded files
            uploadedMedia.forEach(file => {
                formData.append('media[]', file);
            });
            
            // Log for demo
            console.log('Complaint submitted with ID:', complaintId);
            console.log('Form data prepared for server');
            
            // Show notification
            showNotification('Complaint submitted successfully!', 'success');
            
