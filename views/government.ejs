                        <h2>Welcome to Government Portal</h2>
                        <p>Manage citizen complaints and ensure efficient public service delivery</p>
                    </div>
                    <div class="stats-grid">
                        <div class="stat-card">
                            <div class="stat-value" style="color: #3182ce;">154</div>
                            <div class="stat-label">Total Complaints</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value" style="color: #38a169;">87</div>
                            <div class="stat-label">Resolved</div>
                        </div>
                        <div class="stat-card">
                            <div class="stat-value" style="color: #ed8936;">42</div>
                            <div class="stat-label">In Progress</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Complaint Categories -->
            <section class="categories-section">
                <div class="section-header">
                    <h2>
                        <i class="fas fa-layer-group"></i>
                        Complaint Categories
                    </h2>
                </div>
                
                <div class="categories-grid">
                    <!-- Water Complaints -->
                    <a href="/government/complaints/water" style="text-decoration: none;">
                        <div class="category-card water-card">
                            <div class="category-icon">
                                <i class="fas fa-tint"></i>
                            </div>
                            <h3 class="category-title">Water Complaints</h3>
                            <p class="category-desc">
                                Manage water supply issues, pipeline complaints, and water quality concerns
                            </p>
                            <span class="complaint-count">
                                24 Active
                            </span>
                        </div>
                    </a>

                    <!-- Garbage Complaints -->
                    <a href="/government/complaints/garbage" style="text-decoration: none;">
                        <div class="category-card garbage-card">
                            <div class="category-icon">
                                <i class="fas fa-trash-alt"></i>
                            </div>
                            <h3 class="category-title">Garbage Complaints</h3>
                            <p class="category-desc">
                                Handle waste management issues and sanitation concerns
                            </p>
                            <span class="complaint-count">
                                18 Active
                            </span>
                        </div>
                    </a>

                    <!-- Electricity Complaints -->
                    <a href="/government/complaints/electricity" style="text-decoration: none;">
                        <div class="category-card electricity-card">
                            <div class="category-icon">
                                <i class="fas fa-bolt"></i>
                            </div>
                            <h3 class="category-title">Electricity Complaints</h3>
                            <p class="category-desc">
                                Address power outages, electrical faults, and supply interruptions
                            </p>
                            <span class="complaint-count">
                                32 Active
                            </span>
                        </div>
                    </a>

                    <!-- Traffic Alerts -->
                    <a href="/government/complaints/traffic" style="text-decoration: none;">
                        <div class="category-card traffic-card">
                            <div class="category-icon">
                                <i class="fas fa-traffic-light"></i>
                            </div>
                            <h3 class="category-title">Traffic Alerts</h3>
                            <p class="category-desc">
