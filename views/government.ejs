<!DOCTYPE html>
<html>

<head>
    <title>CityZen | Government Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f4f6f9;
            font-family: Arial, sans-serif;
        }

        .card {
            border-radius: 12px;
        }

        .badge-status {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
        }

        .alert-red {
            background: #f8d7da;
        }

        .alert-yellow {
            background: #fff3cd;
        }

        .alert-green {
            background: #d1e7dd;
        }

        .alert-blue {
            background: #cfe2ff;
        }
    </style>
</head>

<body>

    <div class="container-fluid p-4">

        <h3 class="mb-4 text-primary">üèõ Government Admin Dashboard</h3>

        

       


        
        <!-- CITIZEN COMPLAINTS -->
        <div class="card p-4">
            <h5>üìù Citizen Complaints</h5>

            <table class="table table-bordered table-hover mt-3">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Category</th>
                        <th>Location</th>
                        <th>Urgency</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>#CZ2041</td>
                        <td>Drainage Blockage</td>
                        <td>Ward 5</td>
                        <td>High</td>
                        <td><span class="badge-status alert-yellow">In Progress</span></td>
                        <td>
                            <select class="form-select form-select-sm">
                                <option>In Progress</option>
                                <option>Resolved</option>
                            </select>
                        </td>
                    </tr>

                    <tr>
                        <td>#CZ2042</td>
                        <td>Streetlight Issue</td>
                        <td>Ring Road</td>
                        <td>Medium</td>
                        <td><span class="badge-status alert-green">Resolved</span></td>
                        <td>
                            <select class="form-select form-select-sm">
                                <option>Resolved</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>

    <button class="btn btn-primary" onclick="window.location.href='/login/logout'">LogOut</button>

</body>

</html>