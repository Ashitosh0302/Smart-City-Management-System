                            <option value="Low" ${complaint.priority === 'Low' ? 'selected' : ''}>Low</option>
                            <option value="Medium" ${complaint.priority === 'Medium' ? 'selected' : ''}>Medium</option>
                            <option value="High" ${complaint.priority === 'High' ? 'selected' : ''}>High</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="govtNotes">Government Notes/Resolution</label>
                        <textarea class="form-textarea" id="govtNotes" placeholder="Add notes about the resolution or current status...">${complaint.resolutionNotes || ''}</textarea>
                        <small class="text-muted">This will be visible to the citizen when status is changed to Resolved</small>
                    </div>
                `;

                document.getElementById('updateForm').innerHTML = formHtml;
                document.getElementById('updateModal').classList.add('active');

            } catch (error) {
                console.error('âŒ Error loading update form:', error);
                showToast('Error loading complaint details', 'error');
            }
        }

        // Save Update Function - FIXED VERSION
        async function saveUpdate() {
            try {
                const newStatus = document.getElementById("statusSelect").value;
                const assignedTo = document.getElementById("assignedTo").value;
                const priority = document.getElementById("prioritySelect").value;
                const govtNotes = document.getElementById("govtNotes").value;

                console.log("ðŸ“¤ Sending water complaint update to backend:", {
                    status: newStatus,
                    assignedTo,
                    priority,
                    govtNotes,
                    complaintId: currentComplaintId
                });

                // Show loading state on button
                const saveBtn = document.querySelector('#updateModal .btn-save');
                const originalText = saveBtn.innerHTML;
                saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Updating...';
                saveBtn.disabled = true;

                // Call the backend API to update the complaint
                const response = await fetch(`/government/complaints/water/${currentComplaintId}`, {
                    method: "PUT",
                    credentials: 'include',
                    headers: {
                        "Content-Type": "application/json",
                        "Accept": "application/json"
                    },
                    body: JSON.stringify({
                        status: newStatus,
                        assignedTo: assignedTo,
                        priority: priority,
                        govtNotes: govtNotes
                    })
                });

                // Reset button state
                saveBtn.innerHTML = originalText;
                saveBtn.disabled = false;

                if (!response.ok) {
                    const errorData = await response.json().catch(() => null);
                    throw new Error(errorData?.message || `Server responded with status ${response.status}`);
                }

                const data = await response.json();
                console.log("ðŸ“¥ Backend response:", data);

                if (!data.success) {
                    throw new Error(data.message || "Update failed");
                }

                // âœ… Update local cache so UI refreshes instantly
                const index = allComplaints.findIndex(c => c._id === currentComplaintId);
                if (index !== -1) {
                    allComplaints[index].status = newStatus;
                    allComplaints[index].assignedTo = assignedTo;
                    allComplaints[index].priority = priority;
                    if (newStatus === 'Resolved') {
                        allComplaints[index].resolutionNotes = govtNotes;
                    }
                    allComplaints[index].updatedAt = new Date().toISOString();
                    
                    // Update other fields if they exist in the response
                    if (data.complaint) {
                        allComplaints[index] = { ...allComplaints[index], ...data.complaint };
                    }
                }

                showToast("Water complaint updated successfully!", "success");

                closeModal();
                filteredComplaints = [...allComplaints];
                updateDashboardStats(allComplaints);
                renderComplaintsTable();

            } catch (error) {
                console.error("âŒ Update failed:", error);
                showToast(error.message || "Failed to update complaint", "error");
                
                // Reset button state if error occurred
                const saveBtn = document.querySelector('#updateModal .btn-save');
                if (saveBtn) {
                    saveBtn.innerHTML = 'Save Changes';
                    saveBtn.disabled = false;
                }
            }
        }

        // Close Modal Function
        function closeModal() {
            document.getElementById('viewModal').classList.remove('active');
            document.getElementById('updateModal').classList.remove('active');
            currentComplaintId = '';
        }

        // Show Toast Notification
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const toastTitle = document.getElementById('toastTitle');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = toast.querySelector('i');

            // Set icon and title based on type
            if (type === 'error') {
                toast.style.borderLeftColor = 'var(--danger-red)';
                toastIcon.className = 'fas fa-exclamation-circle';
                toastIcon.style.color = 'var(--danger-red)';
                toastTitle.textContent = 'Error!';
            } else if (type === 'warning') {
                toast.style.borderLeftColor = 'var(--warning-orange)';
                toastIcon.className = 'fas fa-exclamation-triangle';
                toastIcon.style.color = 'var(--warning-orange)';
                toastTitle.textContent = 'Warning!';
            } else {
                toast.style.borderLeftColor = 'var(--success-green)';
                toastIcon.className = 'fas fa-check-circle';
                toastIcon.style.color = 'var(--success-green)';
                toastTitle.textContent = 'Success!';
            }

            toastMessage.textContent = message;
            toast.classList.add('show');

            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Close modal when clicking outside
        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('modal-overlay')) {
                closeModal();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
    </script>
