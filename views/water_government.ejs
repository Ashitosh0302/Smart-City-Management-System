                        </div>
                    </div>
                </div>

                <div class="detail-section">
                    <h4><i class="fas fa-user"></i> Citizen Information</h4>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <span class="detail-label">Name</span>
                            <div class="detail-value">${complaint.citizenName}</div>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Phone</span>
                            <div class="detail-value">${complaint.phone}</div>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Email</span>
                            <div class="detail-value">${complaint.email}</div>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Address</span>
                            <div class="detail-value">${complaint.address}</div>
                        </div>
                    </div>
                </div>

                <div class="detail-section">
                    <h4><i class="fas fa-calendar-alt"></i> Issue Details</h4>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <span class="detail-label">Issue Date</span>
                            <div class="detail-value">${complaint.issueDate}</div>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Issue Time</span>
                            <div class="detail-value">${complaint.issueTime}</div>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Duration</span>
                            <div class="detail-value">${complaint.duration}</div>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Location</span>
                            <div class="detail-value">${complaint.location}</div>
                        </div>
                    </div>
                </div>

                <div class="detail-section">
                    <h4><i class="fas fa-clipboard"></i> Additional Information</h4>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <span class="detail-label">Description</span>
                            <div class="detail-value">${complaint.description}</div>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Notes</span>
                            <div class="detail-value">${complaint.notes}</div>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Assigned To</span>
                            <div class="detail-value">${complaint.assignedTo}</div>
                        </div>
                        ${complaint.status === 'Resolved' ? `
                            <div class="detail-item">
                                <span class="detail-label">Resolution Notes</span>
                                <div class="detail-value">${complaint.resolutionNotes || 'Not provided'}</div>
                            </div>
                        ` : ''}
                    </div>
                </div>
            `;
            
            document.getElementById('complaintDetails').innerHTML = detailsHtml;
            document.getElementById('viewModal').classList.add('active');
        }

        // Update Complaint Function
        function updateComplaint(complaintId) {
            currentComplaintId = complaintId;
            const complaint = complaints[complaintId];
            
            const formHtml = `
                <div class="form-group">
                    <label>Complaint ID</label>
                    <div class="detail-value" style="padding: 0.5rem; background: var(--light-blue); border-radius: 6px;">
                        ${complaintId}
                    </div>
                </div>

                <div class="form-group">
                    <label>Current Status</label>
                    <div style="padding: 0.5rem; background: var(--light-blue); border-radius: 6px; display: inline-block;">
                        <span class="status-badge status-${complaint.status.toLowerCase().replace(' ', '')}">
                            ${complaint.status}
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="statusSelect">Update Status</label>
                    <select class="form-select" id="statusSelect">
                        <option value="New" ${complaint.status === 'New' ? 'selected' : ''}>New</option>
                        <option value="In Progress" ${complaint.status === 'In Progress' ? 'selected' : ''}>In Progress</option>
                        <option value="Resolved" ${complaint.status === 'Resolved' ? 'selected' : ''}>Resolved</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="assignedTo">Assign To</label>
                    <select class="form-select" id="assignedTo">
                        <option value="Not Assigned" ${complaint.assignedTo === 'Not Assigned' ? 'selected' : ''}>Not Assigned</option>
                        <option value="Water Department Team A" ${complaint.assignedTo === 'Water Department Team A' ? 'selected' : ''}>Water Department Team A</option>
                        <option value="Water Department Team B" ${complaint.assignedTo === 'Water Department Team B' ? 'selected' : ''}>Water Department Team B</option>
                        <option value="Repair Team A" ${complaint.assignedTo === 'Repair Team A' ? 'selected' : ''}>Repair Team A</option>
                        <option value="Repair Team B" ${complaint.assignedTo === 'Repair Team B' ? 'selected' : ''}>Repair Team B</option>
                        <option value="Quality Team C" ${complaint.assignedTo === 'Quality Team C' ? 'selected' : ''}>Quality Team C</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="prioritySelect">Priority</label>
                    <select class="form-select" id="prioritySelect">
                        <option value="Low" ${complaint.priority === 'Low' ? 'selected' : ''}>Low</option>
                        <option value="Medium" ${complaint.priority === 'Medium' ? 'selected' : ''}>Medium</option>
                        <option value="High" ${complaint.priority === 'High' ? 'selected' : ''}>High</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="govtNotes">Government Notes</label>
                    <textarea class="form-textarea" id="govtNotes" placeholder="Add notes or comments about this complaint...">${complaint.resolutionNotes || ''}</textarea>
                </div>
            `;
            
            document.getElementById('updateForm').innerHTML = formHtml;
            document.getElementById('updateModal').classList.add('active');
        }

        // Save Update Function
        function saveUpdate() {
            const newStatus = document.getElementById('statusSelect').value;
            const assignedTo = document.getElementById('assignedTo').value;
            const priority = document.getElementById('prioritySelect').value;
            const govtNotes = document.getElementById('govtNotes').value;
            
            // Update the complaint data
            complaints[currentComplaintId].status = newStatus;
            complaints[currentComplaintId].assignedTo = assignedTo;
            complaints[currentComplaintId].priority = priority;
            
            if (newStatus === 'Resolved') {
                complaints[currentComplaintId].resolutionNotes = govtNotes;
            }
            
            // Update the table row status
            updateTableStatus(currentComplaintId, newStatus);
            
            // Close modal
            closeModal();
            
            // Show success message
            showToast(`Complaint ${currentComplaintId} updated to "${newStatus}"`);
        }

        // Update table row status
        function updateTableStatus(complaintId, newStatus) {
            // Find all table rows
            const rows = document.querySelectorAll('.table-row');
            
            rows.forEach(row => {
                const idCell = row.querySelector('.complaint-id');
                if (idCell && idCell.textContent === complaintId) {
                    // Update status badge
                    const statusCell = row.querySelector('.status-badge');
                    if (statusCell) {
                        // Remove all status classes
                        statusCell.classList.remove('status-new', 'status-inprogress', 'status-resolved');
                        
                        // Add new status class
                        let statusClass = '';
                        switch(newStatus) {
                            case 'New': statusClass = 'status-new'; break;
                            case 'In Progress': statusClass = 'status-inprogress'; break;
                            case 'Resolved': statusClass = 'status-resolved'; break;
                        }
                        statusCell.classList.add(statusClass);
                        
                        // Update text
                        statusCell.textContent = newStatus;
                    }
                }
            });
        }

        // Close Modal Function
        function closeModal() {
            document.getElementById('viewModal').classList.remove('active');
            document.getElementById('updateModal').classList.remove('active');
            currentComplaintId = '';
        }

        // Show Toast Notification
        function showToast(message) {
            document.getElementById('toastMessage').textContent = message;
            const toast = document.getElementById('toast');
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Close modal when clicking outside
        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('modal-overlay')) {
                closeModal();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeModal();
            }
        });

        // Simple hover effects for table rows
        document.addEventListener('DOMContentLoaded', function() {
            const tableRows = document.querySelectorAll('.table-row');
            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.backgroundColor = '#f8fafc';
                    this.style.transform = 'translateY(-2px)';
                });
                
                row.addEventListener('mouseleave', function() {
                    this.style.backgroundColor = '';
                    this.style.transform = '';
                });
            });
        });
    </script>
