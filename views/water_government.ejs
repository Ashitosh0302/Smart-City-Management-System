            },
            'WTR-789459': {
                description: 'Dirty water supply reported in Green Park Colony',
                location: 'Green Park Colony',
                status: 'Resolved',
                citizenName: 'Maria Garcia',
                phone: '+91 9876543213',
                email: 'maria.g@example.com',
                address: 'House No. 78, Green Park Colony',
                issueDate: '2024-01-28',
                issueTime: '11:45 AM',
                duration: '2 days',
                issueType: 'Dirty Water',
                notes: 'Brown colored water with sediments. Issue resolved after pipeline cleaning.',
                assignedTo: 'Quality Team C',
                priority: 'Medium',
                resolutionNotes: 'Pipeline cleaned and water tested. Quality restored.'
            },
            'WTR-789460': {
                description: 'Complete water shortage in Industrial Area',
                location: 'Industrial Area',
                status: 'New',
                citizenName: 'David Lee',
                phone: '+91 9876543214',
                email: 'david.lee@example.com',
                address: 'Factory Unit 12, Industrial Area',
                issueDate: '2024-02-03',
                issueTime: '08:00 AM',
                duration: '1 day',
                issueType: 'No Water Supply',
                notes: 'Complete water shortage affecting factory operations.',
                assignedTo: 'Not Assigned',
                priority: 'High'
            }
        };

        let currentComplaintId = '';

        // View Complaint Function
        function viewComplaint(complaintId) {
            currentComplaintId = complaintId;
            const complaint = complaints[complaintId];
            
            const detailsHtml = `
                <div class="detail-section">
                    <h4><i class="fas fa-info-circle"></i> Complaint Information</h4>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <span class="detail-label">Complaint ID</span>
                            <div class="detail-value">${complaintId}</div>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Status</span>
                            <div class="detail-value">
                                <span class="status-badge status-${complaint.status.toLowerCase().replace(' ', '')}">
                                    ${complaint.status}
                                </span>
                            </div>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Priority</span>
                            <div class="detail-value">${complaint.priority}</div>
