            // Apply date filter
            if (dateFilter !== 'all') {
                const now = new Date();
                filteredComplaints = filteredComplaints.filter(complaint => {
                    const complaintDate = new Date(complaint.createdAt);

                    switch (dateFilter) {
                        case 'today':
                            return complaintDate.toDateString() === now.toDateString();
                        case 'week':
                            const weekAgo = new Date(now - 7 * 24 * 60 * 60 * 1000);
                            return complaintDate >= weekAgo;
                        case 'month':
                            const monthAgo = new Date(now.getFullYear(), now.getMonth() - 1, now.getDate());
                            return complaintDate >= monthAgo;
                        default:
                            return true;
                    }
                });
            }

            // Apply search filter
            if (searchText) {
                filteredComplaints = filteredComplaints.filter(complaint =>
                    (complaint.description && complaint.description.toLowerCase().includes(searchText)) ||
                    (complaint.complaintId && complaint.complaintId.toLowerCase().includes(searchText)) ||
