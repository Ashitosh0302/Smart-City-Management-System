<!DOCTYPE html>
<html>

<head>
    <title>CityZen | Hospital Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background: #f4f6f9;
            font-family: Arial, sans-serif;
        }

        .card {
            border-radius: 12px;
        }

        .badge-status {
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 12px;
        }

        .alert-pending {
            background: #fff3cd;
        }

        .alert-confirmed {
            background: #cfe2ff;
        }

        .alert-completed {
            background: #d1e7dd;
        }

        .alert-cancelled {
            background: #f8d7da;
        }
    </style>
</head>

<body>

    <div class="container-fluid p-4">

        <h3 class="mb-4 text-primary">üè• Hospital Dashboard</h3>

        <!-- MANAGE APPOINTMENTS -->
        <div class="card mb-4 p-4">
            <h5>üìÖ Manage Appointments</h5>

            <form method="post" action="/hospital/appointments/add">
                <div class="row g-3">
                    <div class="col-md-4">
                        <input type="text" class="form-control" name="patientName" placeholder="Patient Name" required>
                    </div>

                    <div class="col-md-4">
                        <input type="datetime-local" class="form-control" name="appointmentDate" required>
                    </div>

                    <div class="col-md-2">
                        <select class="form-select" name="status" required>
                            <option value="">Status</option>
                            <option value="Pending">Pending</option>
                            <option value="Confirmed">Confirmed</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <button class="btn btn-primary w-100">Add Appointment</button>
                    </div>
                </div>
            </form>
        </div>

        <!-- CURRENT APPOINTMENTS -->
        <div class="card p-4">
            <h5>üìã Current Appointments</h5>

            <table class="table table-bordered table-hover mt-3">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Patient Name</th>
                        <th>Date & Time</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>#H001</td>
                        <td>John Doe</td>
                        <td>2026-01-20 10:30 AM</td>
                        <td><span class="badge-status alert-pending">Pending</span></td>
                        <td>
                            <select class="form-select form-select-sm">
                                <option>Pending</option>
                                <option>Confirmed</option>
                                <option>Completed</option>
                                <option>Cancelled</option>
                            </select>
                        </td>
                    </tr>

                    <tr>
                        <td>#H002</td>
                        <td>Jane Smith</td>
                        <td>2026-01-21 02:00 PM</td>
                        <td><span class="badge-status alert-confirmed">Confirmed</span></td>
                        <td>
                            <select class="form-select form-select-sm">
                                <option>Pending</option>
                                <option selected>Confirmed</option>
                                <option>Completed</option>
                                <option>Cancelled</option>
                            </select>
                        </td>
                    </tr>

                    <tr>
                        <td>#H003</td>
                        <td>Mike Johnson</td>
                        <td>2026-01-22 11:00 AM</td>
                        <td><span class="badge-status alert-completed">Completed</span></td>
                        <td>
                            <select class="form-select form-select-sm">
                                <option>Pending</option>
                                <option>Confirmed</option>
                                <option selected>Completed</option>
                                <option>Cancelled</option>
                            </select>
                        </td>
                    </tr>

                    <tr>
                        <td>#H004</td>
                        <td>Lisa Ray</td>
                        <td>2026-01-23 09:30 AM</td>
                        <td><span class="badge-status alert-cancelled">Cancelled</span></td>
                        <td>
                            <select class="form-select form-select-sm">
                                <option>Pending</option>
                                <option>Confirmed</option>
                                <option>Completed</option>
                                <option selected>Cancelled</option>
                            </select>
                        </td>
                    </tr>
                
                </tbody>
            </table>
        </div>

    </div>

</body>

</html>