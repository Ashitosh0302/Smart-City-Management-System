            position: relative;
            overflow: hidden;
        }
        
        .bedroom-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(139, 69, 19, 0.1), transparent);
            transition: 0.5s;
        }
        
        .bedroom-btn:hover {
            border-color: #8B4513;
            transform: translateY(-2px) scale(1.05);
        }
        
        .bedroom-btn:hover::before {
            left: 100%;
        }
        
        .bedroom-btn.active {
            background: linear-gradient(135deg, #8B4513 0%, #D2691E 100%);
            color: white;
            border-color: #8B4513;
            animation: activePulse 2s infinite;
        }
        
        .features-filter {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 15px;
            margin: 25px 0;
            animation: fadeInUp 0.8s ease 0.9s both;
        }
        
        .feature-checkbox {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 15px;
            background: #f7fafc;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
        }
        
        .feature-checkbox:hover {
            background: #FAF0E6;
            transform: translateY(-3px) scale(1.02);
            box-shadow: 0 5px 15px rgba(139, 69, 19, 0.1);
        }
        
        .feature-checkbox input {
            width: 20px;
            height: 20px;
            accent-color: #8B4513;
            transition: transform 0.3s;
        }
        
        .feature-checkbox input:checked {
            transform: scale(1.2);
        }
        
        .feature-label {
            font-weight: 500;
            color: #2d3748;
        }
        
        .distance-filter {
            display: flex;
            align-items: center;
            gap: 15px;
            margin: 30px 0;
            padding: 20px;
            background: #f7fafc;
            border-radius: 12px;
            animation: fadeInUp 0.8s ease 1s both;
        }
        
        .distance-slider {
            flex: 1;
        }
        
        .distance-label {
            font-weight: 600;
            color: #2d3748;
            min-width: 150px;
        }
        
        input[type="range"] {
            width: 100%;
            height: 8px;
            -webkit-appearance: none;
            background: linear-gradient(90deg, #8B4513, #D2691E);
            border-radius: 4px;
            outline: none;
            transition: all 0.3s;
        }
        
        input[type="range"]:hover {
            height: 10px;
        }
        
        input[type="range"]::-webkit-slider-thumb {
