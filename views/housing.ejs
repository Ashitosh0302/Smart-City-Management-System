            font-size: 1.4rem;
            display: flex;
            align-items: center;
            gap: 10px;
            animation: fadeInLeft 0.8s ease 0.2s both;
        }
        
        @keyframes fadeInLeft {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        .city-dropdown {
            position: relative;
            animation: fadeInRight 0.8s ease 0.3s both;
        }
        
        @keyframes fadeInRight {
            from {
