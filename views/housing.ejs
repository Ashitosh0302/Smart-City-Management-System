        }
        
        @keyframes badgeSlide {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }
        
        .property-status {
            position: absolute;
            top: 15px;
            right: 15px;
            background: #228B22;
            color: white;
            padding: 5px 15px;
