        function selectArea(area) {
            document.getElementById('affectedArea').value = area;
            document.querySelectorAll('.security-card').forEach(card => {
                card.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
        }

        // Handle media upload
        function handleMediaUpload(event) {
            const files = Array.from(event.target.files);
            const preview = document.getElementById('mediaPreview');
            
            if (uploadedFiles.length + files.length > 5) {
                alert('Maximum 5 files allowed');
                return;
            }
            
            files.forEach(file => {
                if (file.size > 10 * 1024 * 1024) {
                    alert(`"${file.name}" is too large (max 10MB)`);
                    return;
                }
                
                uploadedFiles.push(file);
                const reader = new FileReader();
                reader.onload = function(e) {
                    const mediaItem = document.createElement('div');
                    mediaItem.className = 'media-item';
                    
                    if (file.type.startsWith('image/')) {
                        mediaItem.innerHTML = `
                            <img src="${e.target.result}" alt="Evidence">
                            <button class="remove-btn" onclick="removeMedia(this)">×</button>
                        `;
                    } else {
                        mediaItem.innerHTML = `
                            <video src="${e.target.result}" controls></video>
                            <button class="remove-btn" onclick="removeMedia(this)">×</button>
                        `;
                    }
                    
                    mediaItem.dataset.name = file.name;
                    preview.appendChild(mediaItem);
                };
                reader.readAsDataURL(file);
            });
            
            event.target.value = '';
        }

        // Remove media
        function removeMedia(btn) {
            const mediaItem = btn.parentElement;
            const fileName = mediaItem.dataset.name;
            uploadedFiles = uploadedFiles.filter(f => f.name !== fileName);
            mediaItem.remove();
        }

        // Form submission
        document.getElementById('roadComplaintForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Basic form validation
            const requiredFields = ['roadName', 'area', 'ward', 'city', 'pincode'];
            let isValid = true;
            
            requiredFields.forEach(field => {
                const element = document.getElementById(field);
                if (!element.value.trim()) {
                    isValid = false;
                    element.style.borderColor = '#e74c3c';
                    setTimeout(() => {
                        element.style.borderColor = '';
                    }, 2000);
                }
            });
            
            if (!isValid) {
                alert('Please fill all required fields marked with *');
                return;
            }
            
            // Generate complaint ID
            const complaintId = 'RC-' + Date.now().toString().slice(-8);
            document.getElementById('complaintId').textContent = complaintId;
            
            // Show success modal
            document.getElementById('successModal').classList.add('show');
            
            // Prepare form data
            const formData = {
                complaintId: complaintId,
                address: {
                    roadName: document.getElementById('roadName').value,
                    area: document.getElementById('area').value,
                    ward: document.getElementById('ward').value,
                    city: document.getElementById('city').value,
                    pincode: document.getElementById('pincode').value
                },
                locationMethod: locationMethod,
                gpsLocation: gpsLocation,
                issueType: document.getElementById('issueType').value,
                securityLevel: document.getElementById('securityLevel').value,
                filesCount: uploadedFiles.length
            };
            
            console.log('Complaint submitted:', formData);
        });

        // Reset form
        function resetForm() {
            document.getElementById('successModal').classList.remove('show');
            document.getElementById('roadComplaintForm').reset();
            
            // Reset location
            document.getElementById('locationStatus').textContent = 'Click to get location';
            document.getElementById('locationStatus').style.color = '';
            document.getElementById('locationDisplay').innerHTML = 
                '<i class="fas fa-map-marker-alt text-muted me-2"></i><span>GPS location will appear here</span>';
            document.getElementById('locationDisplay').classList.remove('success');
            
            gpsLocation = null;
            
            // Reset selections
            selectIssue('potholes');
            selectSecurity('moderate');
            selectArea('small');
            selectLocationMethod('address');
            
            // Clear media
            uploadedFiles = [];
            document.getElementById('mediaPreview').innerHTML = '';
            
            // Set today's date and time
            const today = new Date().toISOString().split('T')[0];
            document.querySelector('input[name="captureDate"]').value = today;
            
            const now = new Date();
            const time = now.getHours().toString().padStart(2, '0') + ':' + 
                         now.getMinutes().toString().padStart(2, '0');
            document.querySelector('input[name="captureTime"]').value = time;
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            createAnimation();
            
            // Set today's date
            const today = new Date().toISOString().split('T')[0];
            document.querySelector('input[name="captureDate"]').value = today;
            
            // Set current time
            const now = new Date();
            const time = now.getHours().toString().padStart(2, '0') + ':' + 
                         now.getMinutes().toString().padStart(2, '0');
            document.querySelector('input[name="captureTime"]').value = time;
            
            // Initialize location method
            selectLocationMethod('address');
            
            // Test if geolocation is available
            if (!navigator.geolocation) {
                console.log('Geolocation is not supported by this browser');
                const gpsBtn = document.getElementById('gpsBtn');
                gpsBtn.style.opacity = '0.6';
                gpsBtn.style.cursor = 'not-allowed';
                gpsBtn.onclick = null;
                gpsBtn.innerHTML = '<i class="fas fa-exclamation-triangle"></i> GPS Not Supported';
            }
        });
    </script>
