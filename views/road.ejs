<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Road Complaint | Smart City</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #e67e22;
            --warning: #f39c12;
            --danger: #e74c3c;
            --success: #27ae60;
            --dark: #2c3e50;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #2c3e50, #34495e);
            min-height: 100vh;
            padding: 20px;
            color: #333;
        }

        /* Animation */
        .road-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            pointer-events: none;
        }

        .road-dot {
            position: absolute;
            width: 10px;
            height: 10px;
            background: #f39c12;
            border-radius: 50%;
            animation: float 4s infinite ease-in-out;
            opacity: 0.5;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0) scale(1); opacity: 0.3; }
            50% { transform: translateY(-20px) scale(1.3); opacity: 0.6; }
        }

        /* Header */
        .header {
            text-align: center;
            margin-bottom: 30px;
            color: white;
        }

        .logo {
            font-size: 2.2rem;
            font-weight: 700;
            display: inline-flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 10px;
        }

        .logo i {
            animation: bounce 2s infinite;
            color: #f1c40f;
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        /* Form */
        .form-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .form-card {
            background: rgba(255, 255, 255, 0.98);
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .form-section {
            margin-bottom: 30px;
            padding-bottom: 30px;
            border-bottom: 2px solid #eee;
        }

        .section-title {
            color: var(--dark);
            font-weight: 600;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 1.3rem;
        }

        .section-title i {
            color: var(--primary);
        }

        /* Location Options */
        .location-options {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }

        .option-btn {
            flex: 1;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            background: white;
            cursor: pointer;
            transition: all 0.3s;
            text-align: center;
            font-weight: 500;
        }

        .option-btn:hover {
            border-color: var(--primary);
            transform: translateY(-2px);
        }

        .option-btn.active {
            background: rgba(230, 126, 34, 0.1);
            border-color: var(--primary);
            color: var(--primary);
        }

        .option-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none !important;
        }

        /* GPS Section */
        .location-section {
            display: none;
            animation: fadeIn 0.3s ease;
        }

        .location-section.active {
            display: block;
        }

        .gps-box {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin-top: 10px;
        }

        .location-btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .location-btn:hover {
            background: #d35400;
            transform: translateY(-2px);
        }

        .location-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none !important;
        }

        .location-display {
            background: white;
            padding: 15px;
            border-radius: 8px;
            margin-top: 15px;
            border: 1px solid #dee2e6;
            min-height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .location-display.success {
            border-color: var(--success);
            background: rgba(39, 174, 96, 0.05);
        }

        /* Issue Cards */
        .issue-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }

        .issue-card {
            background: white;
            border: 2px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

        .issue-card:hover {
            border-color: var(--primary);
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .issue-card.active {
            background: rgba(230, 126, 34, 0.1);
            border-color: var(--primary);
        }

        .issue-icon {
            font-size: 2rem;
            margin-bottom: 10px;
            color: var(--primary);
        }

        /* Security Cards */
        .security-cards {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }

        .security-card {
            flex: 1;
            background: white;
            border: 2px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

        .security-card.minor {
            border-color: #27ae60;
        }

        .security-card.moderate {
            border-color: #f39c12;
        }

        .security-card.dangerous {
            border-color: #e74c3c;
        }

        .security-card.active {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        /* Upload Area */
        .upload-area {
            border: 2px dashed var(--primary);
            border-radius: 10px;
            padding: 40px 20px;
            text-align: center;
            cursor: pointer;
            background: #f8f9fa;
            margin-bottom: 20px;
            transition: all 0.3s;
        }

        .upload-area:hover {
            background: #e9ecef;
        }

        .upload-icon {
            font-size: 3rem;
            color: var(--primary);
            margin-bottom: 15px;
        }

        /* Submit Button */
        .submit-btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 15px 40px;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1.1rem;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .submit-btn:hover {
            background: #d35400;
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }

        /* Success Modal */
        .success-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 1000;
        }

        .success-modal.show {
            display: flex;
            animation: fadeIn 0.3s ease;
        }

        .success-card {
            background: white;
            border-radius: 15px;
            padding: 40px;
            text-align: center;
            max-width: 400px;
            width: 90%;
            animation: popIn 0.4s ease;
        }

        @keyframes popIn {
            0% { transform: scale(0.8); opacity: 0; }
            100% { transform: scale(1); opacity: 1; }
        }

        .success-icon {
            font-size: 4rem;
            color: var(--success);
            margin-bottom: 20px;
            animation: bounce 1s ease;
        }

        /* Media Preview */
        .media-preview {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 20px;
        }

        .media-item {
            width: 100px;
            height: 100px;
            border-radius: 8px;
            overflow: hidden;
            position: relative;
        }

        .media-item img, .media-item video {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .remove-btn {
            position: absolute;
            top: 5px;
            right: 5px;
            background: var(--danger);
            color: white;
            border: none;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            font-size: 12px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .issue-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .security-cards {
                flex-direction: column;
            }
            
            .form-card {
                padding: 20px;
            }
            
            .location-options {
                flex-direction: column;
            }
        }

        @media (max-width: 576px) {
            .issue-grid {
                grid-template-columns: 1fr;
            }
            
            body {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <!-- Animation Container -->
    <div class="road-animation" id="roadAnimation"></div>

    <!-- Header -->
    <div class="header">
        <div class="logo">
            <i class="fas fa-road"></i>
            Road Complaint Portal
        </div>
        <p class="subtitle">Report road issues. Help make our roads safer.</p>
    </div>

    <!-- Main Form -->
    <div class="form-container">
        <div class="form-card">
            <form id="roadComplaintForm">
                <!-- Location Details -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-map-marker-alt"></i>
                        Location Details
                    </h3>

                    <!-- Basic Address - ALWAYS SHOW THIS -->
                    <div class="mb-4">
                        <h5 class="mb-3">Enter Address Details *</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Road/Street Name *</label>
                                <input type="text" class="form-control" name="roadName" required 
                                       placeholder="Enter road/street name" id="roadName">
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Area/Locality *</label>
                                <input type="text" class="form-control" name="area" required 
                                       placeholder="Enter locality/area" id="area">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Ward/Zone *</label>
                                <select class="form-select" name="ward" required id="ward">
                                    <option value="">Select Ward/Zone</option>
                                    <option>Ward 1</option>
                                    <option>Ward 2</option>
                                    <option>Ward 3</option>
                                    <option>Ward 4</option>
                                </select>
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label class="form-label">City *</label>
                                <input type="text" class="form-control" name="city" value="Mumbai" required id="city">
                            </div>
                            
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Pincode *</label>
                                <input type="text" class="form-control" name="pincode" pattern="[0-9]{6}" required 
                                       placeholder="6-digit pincode" id="pincode">
                            </div>
                        </div>
                    </div>

                    <!-- Location Options -->
                    <div class="mt-4">
                        <label class="form-label">Additional Location Method (Optional)</label>
                        <div class="location-options">
                            <div class="option-btn active" onclick="selectLocationMethod('address')" id="addressBtn">
                                <i class="fas fa-home"></i> Use Address Only
                            </div>
                            <div class="option-btn" onclick="selectLocationMethod('gps')" id="gpsBtn">
                                <i class="fas fa-location-arrow"></i> Add GPS Location
                            </div>
                        </div>
                    </div>

                    <!-- GPS Section -->
                    <div id="gpsSection" class="location-section">
                        <div class="gps-box">
                            <div class="d-flex align-items-center gap-3 mb-3">
                                <button type="button" class="location-btn" id="gpsButton" onclick="getGPSLocation()">
                                    <i class="fas fa-location-arrow"></i>
                                    Get Current Location
                                </button>
                                <span id="locationStatus">Click to get location</span>
                            </div>
                            
                            <div id="locationDisplay" class="location-display">
                                <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                <span>GPS location will appear here</span>
                            </div>
                            <p class="text-muted mt-2 mb-0">
                                <small><i class="fas fa-info-circle"></i> GPS helps us pinpoint exact location</small>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Road Issue Details -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-exclamation-triangle"></i>
                        Road Issue Details
                    </h3>

                    <!-- Issue Type -->
                    <div class="mb-4">
                        <label class="form-label">Type of Road Issue *</label>
                        <div class="issue-grid">
                            <div class="issue-card active" onclick="selectIssue('potholes')">
                                <i class="fas fa-crutch issue-icon"></i>
                                <div>Potholes</div>
                            </div>
                            
                            <div class="issue-card" onclick="selectIssue('damaged_road')">
                                <i class="fas fa-road issue-icon"></i>
                                <div>Damaged Road</div>
                            </div>
                            
                            <div class="issue-card" onclick="selectIssue('waterlogging')">
                                <i class="fas fa-water issue-icon"></i>
                                <div>Waterlogging</div>
                            </div>
                            
                            <div class="issue-card" onclick="selectIssue('uneven_surface')">
                                <i class="fas fa-mountain issue-icon"></i>
                                <div>Uneven Surface</div>
                            </div>
                            
                            <div class="issue-card" onclick="selectIssue('open_manhole')">
                                <i class="fas fa-person-falling issue-icon"></i>
                                <div>Open Manhole</div>
                            </div>
                            
                            <div class="issue-card" onclick="selectIssue('road_dug')">
                                <i class="fas fa-dig issue-icon"></i>
                                <div>Road Dug Up</div>
                            </div>
                        </div>
                        <input type="hidden" name="issueType" id="issueType" value="potholes">
                    </div>

                    <!-- Security Level & Area -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Security Level *</label>
                            <div class="security-cards">
                                <div class="security-card minor" onclick="selectSecurity('minor')">
                                    <i class="fas fa-check-circle" style="color:#27ae60;"></i>
                                    <div>Minor</div>
                                </div>
                                
                                <div class="security-card moderate active" onclick="selectSecurity('moderate')">
                                    <i class="fas fa-exclamation-triangle" style="color:#f39c12;"></i>
                                    <div>Moderate</div>
                                </div>
                                
                                <div class="security-card dangerous" onclick="selectSecurity('dangerous')">
                                    <i class="fas fa-skull-crossbones" style="color:#e74c3c;"></i>
                                    <div>Dangerous</div>
                                </div>
                            </div>
                            <input type="hidden" name="securityLevel" id="securityLevel" value="moderate">
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">Affected Area *</label>
                            <div class="security-cards">
                                <div class="security-card active" onclick="selectArea('small')">
                                    <i class="fas fa-square" style="color:#27ae60;"></i>
                                    <div>Small Patch</div>
                                </div>
                                
                                <div class="security-card" onclick="selectArea('large')">
                                    <i class="fas fa-road" style="color:#e74c3c;"></i>
                                    <div>Large Area</div>
                                </div>
                            </div>
                            <input type="hidden" name="affectedArea" id="affectedArea" value="small">
                        </div>
                    </div>

                    <!-- Duration & Weather -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Since When? *</label>
                            <div class="row">
                                <div class="col-6">
                                    <input type="number" class="form-control" name="durationValue" min="1" value="1" required>
                                </div>
                                <div class="col-6">
                                    <select class="form-select" name="durationUnit" required>
                                        <option value="days">Days</option>
                                        <option value="weeks">Weeks</option>
                                        <option value="months">Months</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fas fa-cloud-rain"></i>
                                Weather Related
                            </label>
                            <select class="form-select" name="monsoonIssue">
                                <option value="">Not related</option>
                                <option value="rainwater">Rainwater Accumulation</option>
                                <option value="mud">Mud on Road</option>
                                <option value="slippery">Slippery Surface</option>
                            </select>
                        </div>
                    </div>

                    <!-- Remarks -->
                    <div class="mb-3">
                        <label class="form-label">Additional Details</label>
                        <textarea class="form-control" name="remarks" rows="3" 
                                  placeholder="Any special instructions or landmarks..."></textarea>
                    </div>
                </div>

                <!-- Photo & Video Evidence -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-camera"></i>
                        Photo & Video Evidence
                    </h3>

                    <!-- Capture Date & Time -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Date of Capture *</label>
                            <input type="date" class="form-control" name="captureDate" required>
                        </div>
                        
                        <div class="col-md-6">
                            <label class="form-label">Time of Capture *</label>
                            <input type="time" class="form-control" name="captureTime" required>
                        </div>
                    </div>

                    <!-- Upload Area -->
                    <div class="mb-4">
                        <label class="form-label">Upload Photos/Videos (Optional)</label>
                        <div class="upload-area" onclick="document.getElementById('mediaInput').click()">
                            <i class="fas fa-cloud-upload-alt upload-icon"></i>
                            <p>Click to upload files</p>
                            <small>Max 5 files, 10MB each</small>
                        </div>
                        <input type="file" id="mediaInput" multiple accept="image/*,video/*" 
                               class="d-none" onchange="handleMediaUpload(event)">
                        
                        <div id="mediaPreview" class="media-preview"></div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="text-center">
                    <button type="submit" class="submit-btn">
                        <i class="fas fa-paper-plane"></i>
                        Submit Complaint
                    </button>
                    <p class="text-muted mt-3">
                        <i class="fas fa-info-circle"></i>
                        Complaint will be addressed within 72 hours
                    </p>
                </div>
            </form>
        </div>
    </div>

    <!-- Success Modal -->
    <div class="success-modal" id="successModal">
        <div class="success-card">
            <div class="success-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h4>Complaint Submitted!</h4>
            <p>Your complaint ID: <strong id="complaintId">RC-XXXXXX</strong></p>
            <p class="text-muted">Road repair team will inspect within 72 hours</p>
            <button class="btn btn-primary mt-3" onclick="resetForm()">
                <i class="fas fa-redo me-2"></i>Submit Another
            </button>
        </div>
    </div>

    <script>
        // Global variables
        let uploadedFiles = [];
        let locationMethod = 'address'; // 'address' or 'gps'
        let gpsLocation = null;

        // Create simple animation
        function createAnimation() {
            const container = document.getElementById('roadAnimation');
            for(let i = 0; i < 20; i++) {
                const dot = document.createElement('div');
                dot.className = 'road-dot';
                dot.style.width = dot.style.height = Math.random() * 10 + 5 + 'px';
                dot.style.left = Math.random() * 100 + '%';
                dot.style.top = Math.random() * 100 + '%';
                dot.style.animationDelay = Math.random() * 3 + 's';
                container.appendChild(dot);
            }
        }

        // Select location method
        function selectLocationMethod(method) {
            locationMethod = method;
            
            // Update button states
            document.querySelectorAll('.option-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
            
            // Show/hide GPS section
            const gpsSection = document.getElementById('gpsSection');
            if (method === 'gps') {
                gpsSection.classList.add('active');
            } else {
                gpsSection.classList.remove('active');
                // Reset GPS display when switching back to address only
                document.getElementById('locationDisplay').innerHTML = 
                    '<i class="fas fa-map-marker-alt text-muted me-2"></i><span>GPS location will appear here</span>';
                document.getElementById('locationDisplay').classList.remove('success');
                document.getElementById('locationStatus').textContent = 'Click to get location';
                document.getElementById('locationStatus').style.color = '';
                gpsLocation = null;
            }
        }

        // Get GPS Location - FIXED VERSION
        function getGPSLocation() {
            const status = document.getElementById('locationStatus');
            const gpsButton = document.getElementById('gpsButton');
            const locationDisplay = document.getElementById('locationDisplay');
            
            // Check if browser supports geolocation
            if (!navigator.geolocation) {
                status.textContent = 'GPS not supported by browser';
                status.style.color = '#e74c3c';
                return;
            }
            
            // Show loading state
            status.textContent = 'Getting location...';
            status.style.color = '#f39c12';
            gpsButton.disabled = true;
            gpsButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Getting Location...';
            
            // Clear previous display
            locationDisplay.innerHTML = '<i class="fas fa-spinner fa-spin text-primary me-2"></i><span>Detecting location...</span>';
            
            // Get current position
            navigator.geolocation.getCurrentPosition(
                // Success callback
                function(position) {
                    const lat = position.coords.latitude;
                    const lng = position.coords.longitude;
                    const accuracy = position.coords.accuracy;
                    
                    // Store GPS data
                    gpsLocation = {
                        lat: lat,
                        lng: lng,
                        accuracy: accuracy
                    };
                    
                    // Update UI
                    status.textContent = 'Location captured!';
                    status.style.color = '#27ae60';
                    gpsButton.disabled = false;
                    gpsButton.innerHTML = '<i class="fas fa-location-arrow"></i> Get Current Location';
                    
                    // Show location in display
                    locationDisplay.innerHTML = `
                        <div class="text-center">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            <div><strong>GPS Location Captured</strong></div>
                            <small class="text-muted">${lat.toFixed(6)}, ${lng.toFixed(6)}</small>
                        </div>
                    `;
                    locationDisplay.classList.add('success');
                    
                    // Try to get address from coordinates
                    getAddressFromCoords(lat, lng);
                    
                    console.log('GPS Location:', gpsLocation);
                },
                // Error callback
                function(error) {
                    gpsButton.disabled = false;
                    gpsButton.innerHTML = '<i class="fas fa-location-arrow"></i> Get Current Location';
                    
                    let errorMessage = '';
                    
                    switch(error.code) {
                        case error.PERMISSION_DENIED:
                            errorMessage = 'Location permission denied. Please allow location access.';
                            break;
                        case error.POSITION_UNAVAILABLE:
                            errorMessage = 'Location unavailable. Check GPS/internet.';
                            break;
                        case error.TIMEOUT:
                            errorMessage = 'Location request timed out. Try again.';
                            break;
                        default:
                            errorMessage = 'Unable to get location. Please try again.';
                            break;
                    }
                    
                    status.textContent = errorMessage;
                    status.style.color = '#e74c3c';
                    
                    locationDisplay.innerHTML = `
                        <div class="text-center text-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <span>${errorMessage}</span>
                        </div>
                    `;
                    locationDisplay.classList.remove('success');
                    
                    alert('GPS location failed. You can still submit using address only.');
                },
                // Options
                {
                    enableHighAccuracy: true,
                    timeout: 10000,
                    maximumAge: 0
                }
            );
        }

        // Get address from coordinates (optional feature)
        async function getAddressFromCoords(lat, lng) {
            const locationDisplay = document.getElementById('locationDisplay');
            
            try {
                const response = await fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}`);
                if (response.ok) {
                    const data = await response.json();
                    if (data.display_name) {
                        let address = data.display_name;
                        if (address.length > 80) {
                            address = address.substring(0, 80) + '...';
                        }
                        locationDisplay.innerHTML = `
                            <div class="text-start">
                                <i class="fas fa-map-marker-alt text-success me-2"></i>
                                <div><strong>Address Found:</strong></div>
                                <small>${address}</small>
                            </div>
                        `;
                        locationDisplay.classList.add('success');
                    }
                }
            } catch (error) {
                // If address fetch fails, we already have coordinates displayed
                console.log('Address fetch failed, coordinates displayed instead');
            }
        }

        // Select road issue
        function selectIssue(type) {
            document.getElementById('issueType').value = type;
            document.querySelectorAll('.issue-card').forEach(card => {
                card.classList.remove('active');
            });
            event.currentTarget.classList.add('active');
        }

