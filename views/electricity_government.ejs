        // Function to filter complaints
        function filterComplaints() {
            const statusFilter = document.getElementById('statusFilter').value;
            const issueTypeFilter = document.getElementById('issueTypeFilter').value;
            const dateFilter = document.getElementById('dateFilter').value;
            const searchText = document.getElementById('searchInput').value.toLowerCase();

            // Start with all complaints
            filteredComplaints = [...allComplaints];

            // Apply status filter
            if (statusFilter !== 'all') {
                filteredComplaints = filteredComplaints.filter(complaint =>
                    complaint.status === statusFilter
                );
            }

            // Apply issue type filter
            if (issueTypeFilter !== 'all') {
                filteredComplaints = filteredComplaints.filter(complaint =>
                    complaint.issue &&
                    complaint.issue.issueType &&
                    complaint.issue.issueType.toLowerCase() === issueTypeFilter.toLowerCase()
                );
            }

            // Apply date filter
            if (dateFilter !== 'all') {
                const now = new Date();
                filteredComplaints = filteredComplaints.filter(complaint => {
                    const complaintDate = new Date(complaint.createdAt);

                    switch (dateFilter) {
                        case 'today':
                            return complaintDate.toDateString() === now.toDateString();
                        case 'week':
                            const weekAgo = new Date(now - 7 * 24 * 60 * 60 * 1000);
                            return complaintDate >= weekAgo;
                        case 'month':
                            const monthAgo = new Date(now.getFullYear(), now.getMonth() - 1, now.getDate());
                            return complaintDate >= monthAgo;
                        default:
                            return true;
                    }
                });
            }

            // Apply search filter
            if (searchText) {
                filteredComplaints = filteredComplaints.filter(complaint =>
                    (complaint.issue && complaint.issue.description && complaint.issue.description.toLowerCase().includes(searchText)) ||
                    (complaint.complaintId && complaint.complaintId.toLowerCase().includes(searchText)) ||
                    (complaint.consumer && complaint.consumer.fullName && complaint.consumer.fullName.toLowerCase().includes(searchText)) ||
                    (complaint.consumer && complaint.consumer.meterNumber && complaint.consumer.meterNumber.toLowerCase().includes(searchText))
                );
            }

            // Reset to first page
            currentPage = 1;

            // Update table
            renderComplaintsTable();
        }

