        // Update Complaint Function
        async function updateComplaint(complaintId) {
            try {
                console.log(`âœï¸ Updating electricity complaint: ${complaintId}`);

                // Find the complaint
                const complaint = allComplaints.find(c => c._id === complaintId) || 
                                 getMockElectricityComplaints().find(c => c._id === complaintId);

                if (!complaint) {
                    showToast('Complaint not found', 'error');
                    return;
                }

                currentComplaintId = complaintId;

                const formHtml = `
                    <div class="form-group">
                        <label>Complaint ID</label>
                        <div class="detail-value" style="padding: 0.5rem; background: var(--light-electric); border-radius: 6px;">
                            ${complaint.complaintId || 'EC-N/A'}
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Consumer Name</label>
                        <div class="detail-value" style="padding: 0.5rem; background: var(--light-electric); border-radius: 6px;">
                            ${complaint.consumer ? complaint.consumer.fullName : 'Not provided'}
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Issue Type</label>
                        <div class="detail-value" style="padding: 0.5rem;">
                            <span class="issue-type-badge ${getIssueTypeClass(complaint.issue ? complaint.issue.issueType : '')}">
                                ${formatIssueType(complaint.issue ? complaint.issue.issueType : '')}
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Current Status</label>
                        <div class="detail-value" style="padding: 0.5rem;">
                            <span class="status-badge status-${(complaint.status || 'Pending').toLowerCase().replace(/\s+/g, '')}">
                                ${complaint.status || 'Pending'}
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="statusSelect">Update Status *</label>
                        <select class="form-select" id="statusSelect" required>
                            <option value="Pending" ${(complaint.status || 'Pending') === 'Pending' ? 'selected' : ''}>Pending</option>
                            <option value="In Progress" ${(complaint.status || 'Pending') === 'In Progress' ? 'selected' : ''}>In Progress</option>
                            <option value="Resolved" ${(complaint.status || 'Pending') === 'Resolved' ? 'selected' : ''}>Resolved</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="assignedTo">Assign To</label>
                        <select class="form-select" id="assignedTo">
                            <option value="">Not Assigned</option>
                            <option value="Electrician Team A">Electrician Team A</option>
                            <option value="Electrician Team B">Electrician Team B</option>
                            <option value="Lineman - Area 1">Lineman - Area 1</option>
                            <option value="Lineman - Area 2">Lineman - Area 2</option>
                            <option value="Emergency Response Team">Emergency Response Team</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="prioritySelect">Priority</label>
                        <select class="form-select" id="prioritySelect">
                            <option value="low">Low</option>
                            <option value="medium" selected>Medium</option>
                            <option value="high">High</option>
                            <option value="urgent">Urgent</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="govtNotes">Technical Notes</label>
                        <textarea class="form-textarea" id="govtNotes" placeholder="Add technical notes...">${complaint.govtNotes || ''}</textarea>
                    </div>
                `;

                document.getElementById('updateForm').innerHTML = formHtml;
                document.getElementById('updateModal').classList.add('active');

            } catch (error) {
                console.error('âŒ Error loading update form:', error);
                showToast('Error loading complaint details', 'error');
            }
        }

        // Save Update Function
        async function saveUpdate() {
            try {
                const newStatus = document.getElementById("statusSelect").value;
                const assignedTo = document.getElementById("assignedTo").value;
                const priority = document.getElementById("prioritySelect").value;
                const govtNotes = document.getElementById("govtNotes").value;

                console.log("ðŸ“¤ Sending electricity complaint update:", {
                    status: newStatus,
                    assignedTo,
                    priority,
                    govtNotes
                });

                // Update local data
                const index = allComplaints.findIndex(c => c._id === currentComplaintId);
                if (index !== -1) {
                    allComplaints[index].status = newStatus;
                    allComplaints[index].updatedAt = new Date().toISOString();
                }

                showToast("Electricity complaint updated successfully!", "success");

                closeModal();
                filteredComplaints = [...allComplaints];
                updateDashboardStats(allComplaints);
                renderComplaintsTable();

            } catch (error) {
                console.error("âŒ Update failed:", error);
                showToast("Failed to update complaint", "error");
            }
        }

        // Close Modal Function
        function closeModal() {
            document.getElementById('viewModal').classList.remove('active');
            document.getElementById('updateModal').classList.remove('active');
            currentComplaintId = '';
        }

        // Show Toast Notification
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const toastTitle = document.getElementById('toastTitle');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = toast.querySelector('i');

            // Set icon and title based on type
            if (type === 'error') {
                toast.style.borderLeftColor = 'var(--danger-electric)';
                toastIcon.className = 'fas fa-exclamation-circle';
                toastIcon.style.color = 'var(--danger-electric)';
                toastTitle.textContent = 'Error!';
            } else if (type === 'warning') {
                toast.style.borderLeftColor = 'var(--warning-electric)';
                toastIcon.className = 'fas fa-exclamation-triangle';
                toastIcon.style.color = 'var(--warning-electric)';
                toastTitle.textContent = 'Warning!';
            } else {
                toast.style.borderLeftColor = 'var(--success-electric)';
                toastIcon.className = 'fas fa-check-circle';
                toastIcon.style.color = 'var(--success-electric)';
                toastTitle.textContent = 'Success!';
            }

            toastMessage.textContent = message;
            toast.classList.add('show');

            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // Close modal when clicking outside
        document.addEventListener('click', (e) => {
            if (e.target.classList.contains('modal-overlay')) {
                closeModal();
            }
        });

        // Close modal with Escape key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
    </script>
