            <div class="tip">üö∂ Pedestrian first</div>
            <div class="tip">üåßÔ∏è Drive slow in rain</div>
        </div>
    </div>
</div>

<footer>
    <p>¬© 2026 Traffic Control Department | Smart City Initiative üáÆüá≥</p>
    <p>Emergency Helpline: 1033 | Traffic Police: 100</p>
</footer>

<script>
const data = {
    Pune: [
        { type: "üöß Road Blocked", location: "MG Road", time: "28 Jan 2026, 9:30 AM", severity: "High" },
        { type: "üöë Accident Reported", location: "NH-48", time: "28 Jan 2026, 8:45 AM", severity: "High" },
        { type: "üö¶ Signal Not Working", location: "FC Road", time: "28 Jan 2026, 10:15 AM", severity: "Medium" }
    ],
    Hyderabad: [
        { type: "üö¶ Signal Not Working", location: "Charminar Junction", time: "28 Jan 2026, 10:10 AM", severity: "Medium" },
        { type: "üèóÔ∏è Road Construction", location: "Gachibowli", time: "28 Jan 2026, 9:00 AM", severity: "Low" },
        { type: "üöó Heavy Traffic", location: "Hitech City", time: "28 Jan 2026, 8:30 AM", severity: "High" }
    ],
    Bangalore: [
        { type: "üèóÔ∏è Road Construction", location: "Ring Road", time: "27 Jan 2026, 6:00 PM", severity: "Low" },
        { type: "üöó Heavy Traffic", location: "Marathahalli", time: "28 Jan 2026, 8:00 AM", severity: "High" },
        { type: "üöß Road Blocked", location: "MG Road", time: "28 Jan 2026, 9:00 AM", severity: "Medium" }
    ],
    Delhi: [
        { type: "üöó Heavy Traffic", location: "Connaught Place", time: "28 Jan 2026, 10:00 AM", severity: "High" },
        { type: "üöß Road Blocked", location: "India Gate", time: "28 Jan 2026, 9:45 AM", severity: "High" },
        { type: "üöë Accident Reported", location: "Rajpath", time: "28 Jan 2026, 9:15 AM", severity: "High" }
    ],
    Mumbai: [
        { type: "üöó Heavy Traffic", location: "Marine Drive", time: "28 Jan 2026, 8:30 AM", severity: "High" },
        { type: "üöß Road Blocked", location: "Bandra-Worli Sea Link", time: "28 Jan 2026, 10:00 AM", severity: "High" },
        { type: "üö¶ Signal Not Working", location: "Churchgate", time: "28 Jan 2026, 9:20 AM", severity: "Medium" }
    ]
};

function loadAlerts(city) {
    const container = document.getElementById("alerts");
    const placeholder = document.getElementById("placeholder");

    container.innerHTML = "";

    if (!city) {
        container.style.display = "none";
        placeholder.style.display = "block";
        return;
    }

    placeholder.style.display = "none";
    container.style.display = "grid";

    data[city].forEach((a, i) => {
        const card = document.createElement("div");
        card.className = "alert-card";
        card.style.animationDelay = `${i * 0.15}s`;

        card.innerHTML = `
            <div class="alert-type">${a.type}</div>
            <div class="location">${a.location}, ${city}</div>
            <div class="time">Reported: ${a.time}</div>
            <span class="severity ${a.severity.toLowerCase()}">
                ${a.severity} Severity
            </span>
        `;
        container.appendChild(card);
    });
}
</script>

</body>
</html>