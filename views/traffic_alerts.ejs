        </div>
        
        <!-- Alert Cards -->
        <h3 class="mb-4"><i class="fas fa-exclamation-triangle"></i> Current Traffic Alerts</h3>
        
        <!-- High Priority Alert -->
        <div class="alert-card" data-priority="high" data-type="accident">
            <div class="alert-header">
                <div>
                    <h4 class="alert-title">Major Accident - Lane Blockage</h4>
                    <span class="alert-badge badge-high">HIGH PRIORITY</span>
                </div>
                <div class="alert-time">
                    <i class="far fa-clock"></i> Updated 15 min ago
