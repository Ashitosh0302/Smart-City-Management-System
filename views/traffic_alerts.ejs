            <div class="alert-header">
                <div>
                    <h4 class="alert-title">Special Event - Increased Traffic</h4>
                    <span class="alert-badge badge-low">LOW PRIORITY</span>
                </div>
                <div class="alert-time">
                    <i class="far fa-clock"></i> Updated 2 hours ago
                </div>
            </div>
            
            <div class="alert-content">
                <div class="alert-detail">
                    <i class="fas fa-map-marker-alt"></i>
                    <span><strong>Location:</strong> Central Park & Surrounding Streets</span>
                </div>
                <div class="alert-detail">
                    <i class="fas fa-calendar-day"></i>
                    <span><strong>Event:</strong> Annual City Marathon</span>
                </div>
                <div class="alert-detail">
                    <i class="fas fa-road"></i>
                    <span><strong>Road Closures:</strong> Main Street (6 AM - 2 PM), Park Ave (6 AM - 12 PM)</span>
                </div>
                <div class="alert-detail">
                    <i class="fas fa-clock"></i>
                    <span><strong>Duration:</strong> Sunday, 6:00 AM - 2:00 PM</span>
                </div>
                <div class="alert-detail">
                    <i class="fas fa-traffic-light"></i>
                    <span><strong>Traffic Impact:</strong> Expect congestion on alternate routes</span>
                </div>
            </div>
            
            <div class="alert-actions">
                <button class="action-btn btn-primary">
                    <i class="fas fa-map-marked-alt"></i> View Event Map
                </button>
                <button class="action-btn btn-outline">
                    <i class="fas fa-subway"></i> Public Transport Options
                </button>
            </div>
        </div>
        
        <!-- Additional Alert -->
        <div class="alert-card success" data-priority="low" data-type="cleared">
            <div class="alert-header">
                <div>
                    <h4 class="alert-title">Previous Incident Cleared</h4>
                    <span class="alert-badge badge-low">CLEARED</span>
                </div>
                <div class="alert-time">
                    <i class="far fa-clock"></i> Cleared 30 min ago
                </div>
            </div>
            
            <div class="alert-content">
                <div class="alert-detail">
                    <i class="fas fa-map-marker-alt"></i>
                    <span><strong>Location:</strong> Oak Street Bridge</span>
                </div>
                <div class="alert-detail">
                    <i class="fas fa-check-circle"></i>
                    <span><strong>Status:</strong> All lanes now open, traffic flowing normally</span>
                </div>
                <div class="alert-detail">
                    <i class="fas fa-clock"></i>
                    <span><strong>Cleared At:</strong> 10:45 AM</span>
                </div>
                <div class="alert-detail">
                    <i class="fas fa-car-side"></i>
                    <span><strong>Current Traffic:</strong> Light, normal speeds</span>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Filter functionality
        document.querySelectorAll('.filter-btn').forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all buttons
                document.querySelectorAll('.filter-btn').forEach(btn => {
                    btn.classList.remove('active');
                });
                
                // Add active class to clicked button
                this.classList.add('active');
                
                const filter = this.getAttribute('data-filter');
                const alerts = document.querySelectorAll('.alert-card');
                
                alerts.forEach(alert => {
                    if (filter === 'all') {
                        alert.style.display = 'block';
                        setTimeout(() => {
                            alert.style.opacity = '1';
                            alert.style.transform = 'translateY(0)';
                        }, 10);
                    } else {
                        const priority = alert.getAttribute('data-priority');
                        const type = alert.getAttribute('data-type');
                        
                        if (priority === filter || type === filter) {
                            alert.style.display = 'block';
                            setTimeout(() => {
                                alert.style.opacity = '1';
                                alert.style.transform = 'translateY(0)';
                            }, 10);
                        } else {
                            alert.style.opacity = '0';
                            alert.style.transform = 'translateY(20px)';
                            setTimeout(() => {
                                alert.style.display = 'none';
                            }, 400);
                        }
                    }
                });
            });
        });
        
        // Button click animations
        document.querySelectorAll('.action-btn').forEach(button => {
            button.addEventListener('click', function() {
                // Add a ripple effect
                const ripple = document.createElement('span');
                const rect = this.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = event.clientX - rect.left - size/2;
                const y = event.clientY - rect.top - size/2;
                
                ripple.style.cssText = `
                    position: absolute;
                    border-radius: 50%;
                    background: rgba(255, 255, 255, 0.7);
                    transform: scale(0);
                    animation: ripple-animation 0.6s linear;
                    width: ${size}px;
                    height: ${size}px;
                    top: ${y}px;
                    left: ${x}px;
                    pointer-events: none;
                `;
                
                this.style.position = 'relative';
                this.style.overflow = 'hidden';
                this.appendChild(ripple);
                
                setTimeout(() => {
                    ripple.remove();
                }, 600);
                
                // Button-specific actions
                const btnText = this.textContent.trim();
                if (btnText.includes('Alternate Route') || btnText.includes('Detour Route')) {
                    alert('Opening navigation with alternate route...');
                } else if (btnText.includes('Notifications')) {
                    alert('Notification preferences updated!');
                } else if (btnText.includes('Traffic Cam')) {
                    alert('Opening live traffic camera feed...');
                } else if (btnText.includes('Event Map')) {
                    alert('Displaying event map and road closures...');
                } else if (btnText.includes('Public Transport')) {
                    alert('Showing public transport options...');
                } else if (btnText.includes('View Schedule')) {
                    alert('Displaying construction schedule...');
                }
            });
        });
        
        // Add CSS for ripple animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes ripple-animation {
                to {
                    transform: scale(4);
                    opacity: 0;
                }
            }
        `;
        document.head.appendChild(style);
        
        // Simulate live updates
        function simulateLiveUpdate() {
            const liveIndicator = document.querySelector('.live-indicator');
            liveIndicator.style.animation = 'none';
            setTimeout(() => {
                liveIndicator.style.animation = 'pulse 2s infinite';
            }, 10);
            
            // Randomly update a stat
            const stats = document.querySelectorAll('.stat-value');
            const randomStat = stats[Math.floor(Math.random() * stats.length)];
            const currentValue = parseInt(randomStat.textContent);
            
            if (randomStat.classList.contains('stat-high') && currentValue > 0) {
                const change = Math.random() > 0.5 ? 1 : -1;
                const newValue = Math.max(0, currentValue + change);
                randomStat.textContent = newValue;
                
                // Add animation
                randomStat.style.transform = 'scale(1.2)';
                randomStat.style.color = change > 0 ? '#ef4444' : '#10b981';
                setTimeout(() => {
                    randomStat.style.transform = 'scale(1)';
                    setTimeout(() => {
                        randomStat.style.color = '';
                    }, 300);
                }, 300);
            }
        }
        
        // Update every 30 seconds
        setInterval(simulateLiveUpdate, 30000);
        
        // Initial animation trigger
        document.addEventListener('DOMContentLoaded', function() {
            // Trigger animations
            setTimeout(() => {
                document.querySelectorAll('.alert-card, .stats-container, .filter-container').forEach(el => {
                    el.style.opacity = '1';
                });
            }, 100);
        });
    </script>
